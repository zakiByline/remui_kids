    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f9fafb;
    border-radius: 6px;
    font-size: 14px;
    color: #6b7280;
}

.g4g7-nav-link:hover .g4g7-nav-icon {
    background: #e0f2fe;
    color: #0369a1;
}

.g4g7-nav-link.active .g4g7-nav-icon {
    background: #bae6fd;
    color: #0369a1;
}

.g4g7-nav-text {
    flex: 1;
}

/* Collapsible content */
.g4g7-section-content {
    display: block;
    transition: all 0.2s ease;
}

.g4g7-section-content.collapsed {
    display: none;
}

/* Quick Actions Section */
.g4g7-quick-actions {
    padding: 0 14px 14px 14px;
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.g4g7-action-card {
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    padding: 12px;
    transition: all 0.2s ease;
    cursor: pointer;
}

.g4g7-action-card:hover {
    background: #f3f4f6;
    border-color: #0369a1;
}

.g4g7-action-content {
    display: flex;
    align-items: center;
    gap: 10px;
}

.g4g7-action-icon {
    width: 32px;
    height: 32px;
    background: #e0f2fe;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0369a1;
    font-size: 14px;
}

.g4g7-action-info {
    flex: 1;
}

.g4g7-action-title {
    font-size: 13px;
    font-weight: 600;
    color: #111827;
    margin: 0 0 2px 0;
}

.g4g7-action-desc {
    font-size: 11px;
    color: #6b7280;
    margin: 0;
    line-height: 1.3;
}

.g4g7-action-arrow {
    color: #9ca3af;
    font-size: 12px;
}

/* Responsive Design */
@media (max-width: 768px) {
