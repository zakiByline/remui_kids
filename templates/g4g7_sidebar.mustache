    background: #6b7280;
    border-radius: 50%;
}

.g4g7-section-toggle {
    font-size: 12px;
    color: #9ca3af;
    transition: transform 0.2s ease;
}

.g4g7-section-toggle.collapsed {
    transform: rotate(-90deg);
}

/* Navigation Items */
.g4g7-nav-item {
    margin: 0 14px 4px 14px;
    border-radius: 8px;
    overflow: hidden;
}

.g4g7-nav-link {
