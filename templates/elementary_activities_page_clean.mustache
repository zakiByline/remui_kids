<script>
// Cascading Filter Functionality
document.addEventListener('DOMContentLoaded', function() {
    const courseFilter = document.getElementById('courseFilterActivities');
    const lessonFilter = document.getElementById('lessonFilterActivities');
    const activityCards = document.querySelectorAll('.activity-card');
    const activityCount = document.getElementById('activityCount');
    const resetButton = document.getElementById('resetFilters');
    
    // Lessons data by course (from PHP)
    const lessonsByCourse = {{{lessons_by_course_json}}};
    
    console.log('Cascading Filters Initialized');
    console.log('Lessons by course:', lessonsByCourse);
    
    // Course filter change event
    if (courseFilter) {
        courseFilter.addEventListener('change', function() {
            const selectedCourse = this.value;
            console.log('Course selected:', selectedCourse);
            
            // Update lesson filter based on selected course
            updateLessonFilter(selectedCourse);
            
            // Filter activities
            filterActivities();
            
            // Show/hide reset button
            updateResetButton();
        });
    }
    
    // Lesson filter change event
    if (lessonFilter) {
        lessonFilter.addEventListener('change', function() {
            console.log('Lesson selected:', this.value);
            filterActivities();
            updateResetButton();
        });
    }
    
    // Reset filters button
    if (resetButton) {
        resetButton.addEventListener('click', function() {
            courseFilter.value = 'all';
            lessonFilter.value = 'all';
            lessonFilter.disabled = true;
            lessonFilter.innerHTML = '<option value="all">All Lessons</option>';
            filterActivities();
            this.style.display = 'none';
        });
    }
    
    // Update lesson filter dropdown based on selected course
    function updateLessonFilter(courseId) {
        lessonFilter.innerHTML = '<option value="all">All Lessons</option>';
        
        if (courseId === 'all') {
            lessonFilter.disabled = true;
        } else {
            lessonFilter.disabled = false;
            
            // Add lessons for the selected course
            if (lessonsByCourse[courseId]) {
                lessonsByCourse[courseId].forEach(function(lesson) {
                    const option = document.createElement('option');
                    option.value = lesson.section_id;
                    option.textContent = lesson.section_name;
                    lessonFilter.appendChild(option);
                });
            }
        }
        
        lessonFilter.value = 'all';
    }
    
    // Filter activities based on selected course and lesson
    function filterActivities() {
        const selectedCourse = courseFilter.value;
        const selectedLesson = lessonFilter.value;
        let visibleCount = 0;
        
        activityCards.forEach(function(card) {
            const cardCourseId = card.getAttribute('data-courseid');
            const cardSectionId = card.getAttribute('data-sectionid');
            
            let showCard = true;
            
            // Apply course filter
            if (selectedCourse !== 'all' && cardCourseId !== selectedCourse) {
                showCard = false;
            }
            
            // Apply lesson filter (only if course is selected)
            if (selectedLesson !== 'all' && cardSectionId !== selectedLesson) {
                showCard = false;
            }
            
            if (showCard) {
                card.classList.remove('filter-hidden');
                visibleCount++;
            } else {
                card.classList.add('filter-hidden');
            }
        });
        
        // Update count
        if (activityCount) {
            activityCount.textContent = visibleCount;
        }
        
        // Smooth animation
        const activitiesGrid = document.getElementById('activitiesGrid');
        if (activitiesGrid) {
            activitiesGrid.style.opacity = '0';
            setTimeout(function() {
                activitiesGrid.style.transition = 'opacity 0.3s ease';
                activitiesGrid.style.opacity = '1';
            }, 50);
        }
    }
    
    // Show/hide reset button
    function updateResetButton() {
        if (resetButton) {
            if (courseFilter.value !== 'all' || lessonFilter.value !== 'all') {
                resetButton.style.display = 'flex';
            } else {
                resetButton.style.display = 'none';
            }
        }
    }
});
</script>
