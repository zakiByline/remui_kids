    console.log('ðŸŽ¨ Elementary Treeview Page Loaded!');
    
    // Expand first course
    const firstCourse = document.querySelector('.course-tree-item');
    if (firstCourse) {
        const courseId = firstCourse.getAttribute('data-course-id');
        if (courseId) {
            const lessonsContainer = document.getElementById('lessons-' + courseId);
            const toggle = document.getElementById('course-toggle-' + courseId);
            if (lessonsContainer && toggle) {
                lessonsContainer.classList.add('show');
                toggle.classList.add('expanded');
            }
            
            // Expand first lesson in first course
            const firstLesson = firstCourse.querySelector('.lesson-tree-item');
            if (firstLesson) {
                const lessonId = firstLesson.getAttribute('data-lesson-id');
                if (lessonId) {
                    const activitiesContainer = document.getElementById('activities-' + lessonId);
                    const lessonToggle = document.getElementById('lesson-toggle-' + lessonId);
                    if (activitiesContainer && lessonToggle) {
                        activitiesContainer.classList.add('show');
                        lessonToggle.classList.add('expanded');
                    }
                }
            }
        }
    }
});
