<script>
// Course Filter Functionality
document.addEventListener('DOMContentLoaded', function() {
    const courseFilter = document.getElementById('courseFilter');
    const lessonCards = document.querySelectorAll('.lesson-card-link');
    const lessonCount = document.getElementById('lessonCount');
    
    if (courseFilter && lessonCards.length > 0) {
        courseFilter.addEventListener('change', function() {
            const selectedCourse = this.value;
            let visibleCount = 0;
            
            lessonCards.forEach(function(card) {
                const cardCourseId = card.getAttribute('data-courseid');
                
                if (selectedCourse === 'all' || cardCourseId === selectedCourse) {
                    card.classList.remove('hidden');
                    visibleCount++;
                } else {
                    card.classList.add('hidden');
                }
            });
            
            // Update lesson count
            if (lessonCount) {
                lessonCount.textContent = visibleCount;
            }
            
            // Smooth scroll animation
            const lessonsGrid = document.getElementById('lessonsGrid');
            if (lessonsGrid) {
                lessonsGrid.style.opacity = '0';
                setTimeout(function() {
                    lessonsGrid.style.transition = 'opacity 0.3s ease';
                    lessonsGrid.style.opacity = '1';
                }, 50);
            }
        });
    }
});
</script>

