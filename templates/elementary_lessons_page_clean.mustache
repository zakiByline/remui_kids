<div class="elementary-lessons-page mt-5 pt-5 pb-5">
    <div class="elementary-lessons-content">
        <div class="container-fluid">
            <!-- Welcome Header with Bubble Animations -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="welcome-header">
                        <!-- Left Side Bubbles -->
                        <div class="welcome-bubbles welcome-bubbles-left">
                            <div class="welcome-bubble welcome-bubble-1"></div>
                            <div class="welcome-bubble welcome-bubble-2"></div>
                            <div class="welcome-bubble welcome-bubble-3"></div>
                            <div class="welcome-bubble welcome-bubble-4"></div>
                        </div>
                        
                        <!-- Center Content -->
                        <div class="welcome-header-content">
                            {{#student_picture_url_only}}
                            <img src="{{student_picture_url_only}}" alt="{{student_name}}" class="welcome-student-picture">
                            {{/student_picture_url_only}}
                            <h1 class="welcome-title">
                                <i class="fa fa-play-circle"></i>
                                My Lessons
                            </h1>
                            <p class="welcome-subtitle">
                                Explore your course sections and track your learning progress!
                            </p>
                        </div>
                        
                        <!-- Right Side Bubbles -->
                        <div class="welcome-bubbles welcome-bubbles-right">
                            <div class="welcome-bubble welcome-bubble-5"></div>
                            <div class="welcome-bubble welcome-bubble-6"></div>
                            <div class="welcome-bubble welcome-bubble-7"></div>
                            <div class="welcome-bubble welcome-bubble-8"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lessons Statistics -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="lessons-stats-container">
                        <div class="lesson-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-folder-open stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">{{total_lessons}}</div>
                                <div class="stat-label">Total Lessons</div>
                            </div>
                        </div>
                        
                        <div class="lesson-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-book stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">{{total_lessons}}</div>
                                <div class="stat-label">Available Lessons</div>
                            </div>
                        </div>
                        
                        <div class="lesson-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-graduation-cap stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">1-3</div>
                                <div class="stat-label">Grade Levels</div>
                            </div>
                        </div>
                        
                        <div class="lesson-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-star stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">â˜…</div>
                                <div class="stat-label">Learning Journey</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Course Filter Section -->
            {{#has_courses}}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="course-filter-container">
                        <div class="filter-label">
                            <i class="fa fa-filter"></i>
                            <span>Filter by Course:</span>
                        </div>
                        <div class="filter-dropdown-wrapper">
                            <select id="courseFilter" class="course-filter-dropdown">
                                <option value="all">All Courses</option>
                                {{#courses}}
                                <option value="{{courseid}}">{{coursename}}</option>
                                {{/courses}}
                            </select>
                        </div>
                        <div class="filter-count">
                            <span id="lessonCount">{{total_lessons}}</span> lessons found
                        </div>
                    </div>
                </div>
            </div>
            {{/has_courses}}

            <!-- Lessons Grid -->
            {{#has_lessons}}
            <div class="lessons-grid" id="lessonsGrid">
                {{#lessons}}
                <a href="{{courseurl}}" class="lesson-card-link" data-courseid="{{courseid}}">
                    <div class="lesson-card">
                        <div class="lesson-image-container">
                            {{#courseimage}}
                            <img src="{{courseimage}}" alt="{{name}}" class="lesson-image">
                            {{/courseimage}}
                            {{^courseimage}}
                            <div class="lesson-image-placeholder">
                                <i class="fa fa-book"></i>
                            </div>
                            {{/courseimage}}
                            
                            <div class="lesson-status-badge available">
                                <i class="fa fa-book"></i>
                            </div>
                        </div>
                        
                        <div class="lesson-content">
                            <h4 class="lesson-title">{{name}}</h4>
                            <p class="lesson-course">{{coursename}}</p>
                            
                            {{#summary}}
                            <p class="lesson-summary">{{summary}}</p>
                            {{/summary}}
                            
                            <div class="lesson-stats">
                                <div class="lesson-stat">
                                    <i class="fa fa-tasks"></i>
                                    <span>{{total_activities}} activities</span>
                                </div>
                                <div class="lesson-stat">
                                    <i class="fa fa-check-circle"></i>
                                    <span>{{completed_activities}} completed</span>
                                </div>
                                 <div class="lesson-stat">
                                   
                                      <span>{{grade_level}}</span>
                                </div>
                            </div>
                            
                           
                            
                            <div class="lesson-actions">
                                <div class="btn btn-primary">
                                    <i class="fa fa-play"></i> Open Lesson
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                {{/lessons}}
            </div>
            {{/has_lessons}}
            
            {{^has_lessons}}
            <div class="no-lessons-message">
                <i class="fa fa-book-open"></i>
                <h3>No Lessons Available</h3>
                <p>Your lessons will appear here once they're assigned by your teacher.</p>
                <a href="{{{dashboardurl}}}" class="btn btn-primary">
                    <i class="fa fa-home"></i> Back to Dashboard
                </a>
            </div>
            {{/has_lessons}}
        </div>
    </div>
</div>

