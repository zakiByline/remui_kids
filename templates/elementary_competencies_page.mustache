                    <div class="metric-progress">
                        <div class="progress-bar-wrapper">
                            <div class="progress-bar-inner {{status}}" style="width: {{progress}}%"></div>
                        </div>
                        <div class="progress-percentage">{{progress}}%</div>
                    </div>
                    
                    <div class="metric-proficiency">
                        <div class="proficiency-number">{{proficiency_level}}<span style="font-size: 1.2rem;">%</span></div>
                        <div class="proficiency-label">Score</div>
                    </div>
                </div>
            </div>
                {{/competencies}}
        </div>
    </div>
{{/competencies_data}}
    
    <!-- Analytics Charts -->
    <div class="analytics-section">
        <h2 class="analytics-title">
            <i class="fa fa-chart-line"></i>
            Visual Analytics
        </h2>
        
        <div class="charts-container">
            <!-- Chart 1: Overall Status -->
            <div class="chart-card">
                <h3><i class="fa fa-pie-chart" style="color: #667eea;"></i> Completion Status</h3>
                <div class="chart-canvas">
                    <canvas id="statusChart"></canvas>
                </div>
