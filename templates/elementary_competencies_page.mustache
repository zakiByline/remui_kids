            <div class="framework-name-section">
                <div class="framework-icon-badge">
                    <i class="fa fa-graduation-cap"></i>
                </div>
                <div class="framework-info">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>
            </div>
            
