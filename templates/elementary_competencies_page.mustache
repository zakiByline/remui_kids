            <!-- Chart 2: Framework Progress -->
            <div class="chart-card">
                <h3><i class="fa fa-chart-bar" style="color: #F59E0B;"></i> Progress by Framework</h3>
                <div class="chart-canvas">
                    <canvas id="frameworkChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    
    {{/has_competencies}}

    {{^has_competencies}}
