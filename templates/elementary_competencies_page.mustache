<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('üìä Competencies page loaded');
    
    // Animate progress bars
    setTimeout(function() {
        const bars = document.querySelectorAll('.progress-bar-inner, .framework-progress-fill');
        bars.forEach(bar => {
            const width = bar.style.width;
            bar.style.width = '0%';
            setTimeout(() => { bar.style.width = width; }, 100);
        });
    }, 300);
    
    {{#has_competencies}}
    // Initialize charts
    setTimeout(function() {
        if (typeof Chart === 'undefined') {
            console.error('‚ùå Chart.js not loaded');
            return;
        }
        
        console.log('‚úÖ Initializing charts...');
        
        try {
            // Chart 1: Status Doughnut
            const statusCtx = document.getElementById('statusChart');
            if (statusCtx) {
                new Chart(statusCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['‚úì Mastered', '‚è≥ In Progress', '‚óã Not Started'],
                        datasets: [{
                            data: [{{completed_competencies}}, {{in_progress_competencies}}, {{not_started_competencies}}],
                            backgroundColor: ['#10B981', '#F59E0B', '#CBD5E1'],
                            borderWidth: 6,
                            borderColor: '#ffffff',
                            hoverOffset: 20
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 20,
                                    font: { size: 14, weight: '700' },
                                    color: '#374151',
                                    usePointStyle: true
                                }
                            },
                            tooltip: {
                                backgroundColor: '#1F2937',
                                padding: 15,
                                titleFont: { size: 16, weight: 'bold' },
                                bodyFont: { size: 14 },
                                cornerRadius: 10,
                                callbacks: {
                                    label: function(context) {
                                        const total = {{total_competencies}};
                                        const pct = ((context.parsed / total) * 100).toFixed(1);
                                        return context.label + ': ' + context.parsed + ' (' + pct + '%)';
                                    }
                                }
                            }
                        }
                    }
                });
                console.log('‚úÖ Status chart created');
            }
            
            // Chart 2: Framework Progress
            const frameworkCtx = document.getElementById('frameworkChart');
            if (frameworkCtx) {
                const names = [];
                const progressData = [];
                const colors = [];
                
                {{#competencies_data}}
                names.push('{{name}}'.substring(0, 20));
                progressData.push({{framework_progress}});
                colors.push({{framework_progress}} >= 80 ? '#10B981' : {{framework_progress}} >= 50 ? '#F59E0B' : '#CBD5E1');
                {{/competencies_data}}
                
                new Chart(frameworkCtx, {
                    type: 'bar',
                    data: {
                        labels: names,
                        datasets: [{
                            label: 'Progress %',
                            data: progressData,
                            backgroundColor: colors,
                            borderRadius: 8,
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                backgroundColor: '#1F2937',
                                padding: 15,
                                titleFont: { size: 14, weight: 'bold' },
                                bodyFont: { size: 13 },
                                cornerRadius: 10,
                                callbacks: {
                                    label: function(context) {
                                        return 'Completion: ' + context.parsed.y.toFixed(0) + '%';
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                grid: { color: '#F1F5F9' },
                                ticks: {
                                    callback: function(value) { return value + '%'; },
                                    font: { size: 12, weight: '600' },
                                    color: '#64748B'
                                }
                            },
                            x: {
                                grid: { display: false },
                                ticks: {
                                    font: { size: 11, weight: '700' },
                                    color: '#374151',
                                    maxRotation: 45,
                                    minRotation: 45
                                }
                            }
                        }
                    }
                });
                console.log('‚úÖ Framework chart created');
            }
            
            console.log('üéâ All charts initialized successfully');
            
        } catch (error) {
            console.error('‚ùå Chart error:', error);
        }
    }, 1000);
    {{/has_competencies}}
});
</script>
