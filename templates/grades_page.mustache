<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js" integrity="sha384-oEc/7cQFKbGXpiIOxc3KfnL5P8Bc1XBykfyq1inxN0Zy3Di99YHc7efFQQtrLPM9" crossorigin="anonymous"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const trendCanvas = document.getElementById('gradeTrendChart');
    if (trendCanvas && typeof Chart !== 'undefined') {
        const courseLabels = [];
        const courseAverages = [];

        document.querySelectorAll('.grades-accordion .course-card').forEach(card => {
            const title = card.querySelector('.course-name');
            const average = card.querySelector('.overall-grade');
            if (title && average) {
                courseLabels.push(title.textContent.trim());
                const numeric = parseFloat(average.textContent);
                courseAverages.push(!isNaN(numeric) ? numeric : 0);
            }
        });

        if (courseLabels.length) {
            new Chart(trendCanvas, {
                type: 'line',
                data: {
                    labels: courseLabels,
                    datasets: [{
                        label: 'Average Grade (%)',
                        data: courseAverages,
                        borderColor: '#6366f1',
                        backgroundColor: 'rgba(99, 102, 241, 0.18)',
                        borderWidth: 3,
                        tension: 0.35,
                        pointRadius: 6,
                        pointBackgroundColor: '#2563eb',
                        pointHoverRadius: 8,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: { stepSize: 10, color: '#475569', font: { weight: 600 } },
                            grid: { color: 'rgba(148, 163, 184, 0.35)', drawBorder: false }
                        },
                        x: {
                            ticks: { color: '#475569', font: { weight: 600 } },
                            grid: { display: false }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: 'rgba(15, 23, 42, 0.95)',
                            titleColor: '#f8fafc',
                            bodyColor: '#e2e8f0',
                            cornerRadius: 12,
                            padding: 14
                        }
                    },
                    animation: { duration: 1200, easing: 'easeOutQuart' }
                }
            });
        } else {
            trendCanvas.insertAdjacentHTML('afterend', '<p class="analytics-subtle">Not enough data yet for a trend chart.</p>');
        }
    }

    const breakdownBar = document.getElementById('categoryBreakdownBar');
    const legend = document.getElementById('categoryLegend');
    if (breakdownBar && legend) {
        const colorPalette = ['#38bdf8', '#22c55e', '#f97316', '#a855f7', '#facc15', '#ef4444', '#14b8a6'];
        let colorIndex = 0;
        const totals = {};

        document.querySelectorAll('.grade-item-card').forEach(card => {
            const categoryLabel = card.querySelector('.grade-item-category');
            const percentageText = card.querySelector('.grade-item-percentage');
            if (!categoryLabel) {
                return;
            }
            const label = categoryLabel.textContent.trim();
            if (!totals[label]) {
                totals[label] = { count: 0, sum: 0, color: colorPalette[colorIndex % colorPalette.length] };
                colorIndex++;
            }
            totals[label].count += 1;
            if (percentageText) {
                const numeric = parseFloat(percentageText.textContent);
                totals[label].sum += isNaN(numeric) ? 0 : numeric;
            }
        });

        const entries = Object.entries(totals);
        if (entries.length) {
            const totalItems = entries.reduce((acc, [, data]) => acc + data.count, 0);
            entries.forEach(([label, data]) => {
                const flexValue = data.count / totalItems;
                const average = data.count ? Math.round(data.sum / data.count) : 0;

                const segment = document.createElement('div');
                segment.className = 'category-breakdown-segment';
                segment.style.flex = flexValue;
                segment.style.background = data.color;
                segment.dataset.label = `${label}: ${average}% (${data.count} items)`;
                breakdownBar.appendChild(segment);

                const legendItem = document.createElement('div');
                legendItem.className = 'category-legend-item';
                legendItem.innerHTML = `<span class="category-legend-color" style="background:${data.color}"></span>${label} â€¢ ${average}%`;
                legend.appendChild(legendItem);
            });
        } else {
            breakdownBar.innerHTML = '<div style="flex:1; display:flex; align-items:center; justify-content:center; color:#64748b; font-weight:600;">No graded categories yet.</div>';
        }
    }

    const popover = document.getElementById('gradePopover');
    function showPopover(card) {
        if (!popover) return;
        const name = card.querySelector('.grade-item-name')?.textContent?.trim() || 'Grade Item';
        const fraction = card.querySelector('.grade-item-fraction')?.textContent?.trim() || 'Score unavailable';
        const feedback = card.querySelector('.grade-item-feedback')?.textContent?.trim() || 'No feedback yet.';
        popover.innerHTML = `<strong>${name}</strong><div>${fraction}</div><div style="margin-top:6px; font-weight:500;">${feedback}</div>`;
        popover.style.display = 'block';
        popover.style.opacity = '0';

        requestAnimationFrame(() => {
            const rect = card.getBoundingClientRect();
            const popoverRect = popover.getBoundingClientRect();
            const top = window.scrollY + rect.top - popoverRect.height - 12;
            const left = window.scrollX + rect.left + rect.width / 2 - popoverRect.width / 2;
            popover.style.top = `${Math.max(window.scrollY + 10, top)}px`;
            popover.style.left = `${Math.max(16, left)}px`;
            popover.style.opacity = '1';
        });
    }
    function hidePopover() {
        if (popover) {
            popover.style.display = 'none';
            popover.style.opacity = '0';
        }
    }
    document.querySelectorAll('.grade-item-card').forEach(card => {
        card.addEventListener('mouseenter', () => showPopover(card));
        card.addEventListener('mouseleave', hidePopover);
    });

    const courseSelect = document.getElementById('gradesCourseSelect');
    const courseCards = document.querySelectorAll('.grades-accordion .course-card');
    if (courseSelect) {
        courseSelect.addEventListener('change', function() {
            const target = this.value;
            courseCards.forEach(card => {
                if (target === 'all' || card.dataset.courseId === target) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });

            if (target !== 'all') {
                const targetCard = Array.from(courseCards).find(card => card.dataset.courseId === target);
                if (targetCard) {
                    const collapse = targetCard.querySelector('.collapse');
                    if (collapse && typeof bootstrap !== 'undefined') {
                        new bootstrap.Collapse(collapse, { show: true });
                    } else if (collapse) {
                        collapse.classList.add('show');
                    }
                    targetCard.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            }
        });
    }
});
</script>
