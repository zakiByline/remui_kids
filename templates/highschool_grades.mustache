<script>
    // Initialize enhanced sidebar
    document.addEventListener('DOMContentLoaded', function () {
        const enhancedSidebar = document.querySelector('.enhanced-sidebar');
        if (enhancedSidebar) {
            document.body.classList.add('has-student-sidebar', 'has-enhanced-sidebar');
            console.log('Enhanced sidebar initialized for high school grades page');
        }

        // Handle sidebar navigation - set active state
        const currentUrl = window.location.href;
        const navLinks = document.querySelectorAll('.student-sidebar .nav-link');
        navLinks.forEach(link => {
            if (link.href === currentUrl) {
                link.classList.add('active');
            }
        });

        // Mobile sidebar toggle (if you add a toggle button in the future)
        const sidebarToggle = document.getElementById('sidebar-toggle');
        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', function () {
                enhancedSidebar.classList.toggle('show');
            });
        }

        const trendCanvas = document.getElementById('gradeTrendChart');
        if (trendCanvas && typeof Chart !== 'undefined') {
            const courseLabels = [];
            const courseAverages = [];

            document.querySelectorAll('.grades-accordion .course-card').forEach(card => {
                const title = card.querySelector('.course-name');
                const grade = card.querySelector('.overall-grade');
                if (title && grade) {
                    courseLabels.push(title.textContent.trim());
                    const numeric = parseFloat(grade.textContent);
                    courseAverages.push(!isNaN(numeric) ? numeric : 0);
                }
            });

            if (courseLabels.length) {
                new Chart(trendCanvas, {
                    type: 'line',
                    data: {
                        labels: courseLabels,
                        datasets: [{
                            label: 'Average Grade (%)',
                            data: courseAverages,
                            borderColor: '#6366f1',
                            backgroundColor: 'rgba(99, 102, 241, 0.18)',
                            borderWidth: 3,
                            tension: 0.35,
                            pointRadius: 6,
                            pointBackgroundColor: '#2563eb',
                            pointHoverRadius: 8,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                ticks: { stepSize: 10, color: '#475569', font: { weight: 600 } },
                                grid: { color: 'rgba(148, 163, 184, 0.35)', drawBorder: false }
                            },
                            x: {
                                ticks: { color: '#475569', font: { weight: 600 } },
                                grid: { display: false }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                backgroundColor: 'rgba(15, 23, 42, 0.95)',
                                titleColor: '#f8fafc',
                                bodyColor: '#e2e8f0',
                                cornerRadius: 12,
                                padding: 14
                            }
                        },
                        animation: { duration: 1200, easing: 'easeOutQuart' }
                    }
                });
            } else {
                trendCanvas.insertAdjacentHTML('afterend', '<p class="analytics-subtle">Not enough data yet for a trend chart.</p>');
            }
        }

        const breakdownBar = document.getElementById('categoryBreakdownBar');
        const legend = document.getElementById('categoryLegend');
        if (breakdownBar && legend) {
            const colorPalette = ['#38bdf8', '#22c55e', '#f97316', '#a855f7', '#facc15', '#ef4444', '#14b8a6'];
            let colorIndex = 0;
            const totals = {};

            document.querySelectorAll('.grade-item-card').forEach(card => {
                const categoryLabel = card.querySelector('.grade-item-category');
                const percentageText = card.querySelector('.grade-item-percentage');
                if (!categoryLabel) {
                    return;
                }
                const label = categoryLabel.textContent.trim();
                if (!totals[label]) {
                    totals[label] = { count: 0, sum: 0, color: colorPalette[colorIndex % colorPalette.length] };
                    colorIndex++;
                }
                totals[label].count += 1;
                if (percentageText) {
                    const numeric = parseFloat(percentageText.textContent);
                    totals[label].sum += isNaN(numeric) ? 0 : numeric;
                }
            });

            const entries = Object.entries(totals);
            if (entries.length) {
                const totalItems = entries.reduce((acc, [, data]) => acc + data.count, 0);
                entries.forEach(([label, data]) => {
                    const flexValue = data.count / totalItems;
                    const average = data.count ? Math.round(data.sum / data.count) : 0;

                    const segment = document.createElement('div');
                    segment.className = 'category-breakdown-segment';
                    segment.style.flex = flexValue;
                    segment.style.background = data.color;
                    segment.dataset.label = `${label}: ${average}% (${data.count} items)`;
                    breakdownBar.appendChild(segment);

                    const legendItem = document.createElement('div');
                    legendItem.className = 'category-legend-item';
                    legendItem.innerHTML = `<span class="category-legend-color" style="background:${data.color}"></span>${label} â€¢ ${average}%`;
                    legend.appendChild(legendItem);
                });
            } else {
                breakdownBar.innerHTML = '<div style="flex:1; display:flex; align-items:center; justify-content:center; color:#64748b; font-weight:600;">No graded categories yet.</div>';
            }
        }

        const popover = document.getElementById('gradePopover');
        function showPopover(card) {
            if (!popover) return;
            const name = card.querySelector('.grade-item-name')?.textContent?.trim() || 'Grade Item';
            const fraction = card.querySelector('.grade-item-fraction')?.textContent?.trim() || 'Score unavailable';
            const feedback = card.querySelector('.grade-item-feedback')?.textContent?.trim() || 'No feedback yet.';
            popover.innerHTML = `<strong>${name}</strong><div>${fraction}</div><div style="margin-top:6px; font-weight:500;">${feedback}</div>`;
            popover.style.display = 'block';
            popover.style.opacity = '0';

            requestAnimationFrame(() => {
                const rect = card.getBoundingClientRect();
                const popRect = popover.getBoundingClientRect();
                const top = window.scrollY + rect.top - popRect.height - 12;
                const left = window.scrollX + rect.left + rect.width / 2 - popRect.width / 2;
                popover.style.top = `${Math.max(window.scrollY + 10, top)}px`;
                popover.style.left = `${Math.max(16, left)}px`;
                popover.style.opacity = '1';
            });
        }
        function hidePopover() {
            if (popover) {
                popover.style.display = 'none';
                popover.style.opacity = '0';
            }
        }

        // Add course card hover effects
        const courseCards = document.querySelectorAll('.course-card');
        courseCards.forEach(card => {
            card.addEventListener('mouseenter', function () {
                this.style.transform = 'translateY(-4px)';
            });

            card.addEventListener('mouseleave', function () {
                this.style.transform = 'translateY(0)';
            });
        });

        // Add grade item hover effects
        const gradeItems = document.querySelectorAll('.grade-item-card');
        gradeItems.forEach(item => {
            item.addEventListener('mouseenter', function () {
                this.style.transform = 'translateY(-3px)';
                showPopover(this);
            });

            item.addEventListener('mouseleave', function () {
                this.style.transform = 'translateY(0)';
                hidePopover();
            });
        });

        // Course selector filter
        const courseSelect = document.getElementById('highschoolCourseSelect');
        if (courseSelect) {
            courseSelect.addEventListener('change', function () {
                const target = this.value;
                const cards = document.querySelectorAll('.grades-accordion .course-card');
                cards.forEach(card => {
                    if (target === 'all' || card.dataset.courseId === target) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });

                if (target !== 'all') {
                    const targetCard = Array.from(cards).find(card => card.dataset.courseId === target);
                    if (targetCard) {
                        const collapse = targetCard.querySelector('.collapse');
                        if (collapse && typeof bootstrap !== 'undefined') {
                            new bootstrap.Collapse(collapse, { show: true });
                        } else if (collapse) {
                            collapse.classList.add('show');
                        }
                        targetCard.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                }
            });
        }

        // Add grade filter functionality
        const filterButtons = document.querySelectorAll('.filter-btn');
        filterButtons.forEach(btn => {
            btn.addEventListener('click', function () {
                // Remove active class from all buttons
                filterButtons.forEach(b => b.classList.remove('active'));
                // Add active class to clicked button
                this.classList.add('active');

                // Filter courses based on grade range
                const filter = this.textContent.toLowerCase();
                const courseCards = document.querySelectorAll('.course-card');

                courseCards.forEach(card => {
                    const averageGrade = parseFloat(card.querySelector('.overall-grade').textContent);
                    let show = true;

                    if (filter === 'excellent' && averageGrade < 90) show = false;
                    else if (filter === 'good' && (averageGrade < 80 || averageGrade >= 90)) show = false;
                    else if (filter === 'average' && (averageGrade < 70 || averageGrade >= 80)) show = false;
                    else if (filter === 'needs improvement' && averageGrade >= 70) show = false;

                    card.style.display = show ? 'block' : 'none';
                });
            });
        });

        // Add grade search functionality
        const searchInput = document.getElementById('gradeSearch');
        if (searchInput) {
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const courseCards = document.querySelectorAll('.course-card');

                courseCards.forEach(card => {
                    const courseTitleElement = card.querySelector('.course-name');
                    const courseTitle = courseTitleElement ? courseTitleElement.textContent.toLowerCase() : '';
                    const gradeItems = card.querySelectorAll('.grade-item-name');
                    let hasMatch = courseTitle.includes(searchTerm);

                    if (!hasMatch) {
                        gradeItems.forEach(item => {
                            if (item.textContent.toLowerCase().includes(searchTerm)) {
                                hasMatch = true;
                            }
                        });
                    }

                    card.style.display = hasMatch ? 'block' : 'none';
                });
            });
        }

        // Add keyboard shortcuts
        document.addEventListener('keydown', function (e) {
            // Ctrl/Cmd + F to focus search
            if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
                e.preventDefault();
                const searchInput = document.getElementById('gradeSearch');
                if (searchInput) {
                    searchInput.focus();
                }
            }

            // Escape to clear search
            if (e.key === 'Escape') {
                const searchInput = document.getElementById('gradeSearch');
                if (searchInput) {
                    searchInput.value = '';
                    searchInput.dispatchEvent(new Event('input'));
                }
            }
        });

        // Add grade trend indicators
        function addTrendIndicators() {
            const courseCards = document.querySelectorAll('.course-card');
            courseCards.forEach(card => {
                const averageElement = card.querySelector('.overall-grade');
                const courseHeader = card.querySelector('.course-card-header');
                if (!averageElement || !courseHeader) {
                    return;
                }
                const averageGrade = parseFloat(averageElement.textContent);

                let trendClass = 'trend-stable';
                let trendIcon = 'fa-minus';
                let trendText = 'Stable';

                if (averageGrade >= 90) {
                    trendClass = 'trend-up';
                    trendIcon = 'fa-arrow-up';
                    trendText = 'Excellent';
                } else if (averageGrade >= 80) {
                    trendClass = 'trend-up';
                    trendIcon = 'fa-arrow-up';
                    trendText = 'Good';
                } else if (averageGrade >= 70) {
                    trendClass = 'trend-stable';
                    trendIcon = 'fa-minus';
                    trendText = 'Average';
                } else {
                    trendClass = 'trend-down';
                    trendIcon = 'fa-arrow-down';
                    trendText = 'Needs Improvement';
                }

                const trendIndicator = document.createElement('div');
                trendIndicator.className = `grade-trend-indicator ${trendClass}`;
                trendIndicator.innerHTML = `<i class="fa ${trendIcon}"></i> ${trendText}`;

                courseHeader.appendChild(trendIndicator);
            });
        }

        // Add progress rings for course averages
        function addProgressRings() {
            const courseCards = document.querySelectorAll('.course-card');
            courseCards.forEach(card => {
                const averageElement = card.querySelector('.overall-grade');
                const metricsContainer = card.querySelector('.course-card-metrics');
                if (!averageElement || !metricsContainer) {
                    return;
                }
                const averageGrade = parseFloat(averageElement.textContent);

                const progressRing = document.createElement('div');
                progressRing.className = 'grade-progress-ring';
                progressRing.innerHTML = `
                <svg width="60" height="60">
                    <defs>
                        <linearGradient id="progressGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset="0%" style="stop-color:#7dd3fc;stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#38bdf8;stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <circle class="progress-ring-circle background" cx="30" cy="30" r="25"></circle>
                    <circle class="progress-ring-circle progress" cx="30" cy="30" r="25" 
                            style="stroke-dashoffset: ${157 - (157 * averageGrade / 100)}"></circle>
                </svg>
                <div class="progress-text">${averageGrade}%</div>
            `;

                metricsContainer.prepend(progressRing);
            });
        }

        // Initialize enhanced features
        setTimeout(() => {
            addTrendIndicators();
            addProgressRings();
        }, 1000);

        // Add grade distribution chart
        function createGradeDistribution() {
            const gradeItems = document.querySelectorAll('.grade-item-card');
            const distribution = {};

            gradeItems.forEach(item => {
                const grade = item.dataset.letterGrade;
                if (!grade || grade === '-') {
                    return;
                }
                distribution[grade] = (distribution[grade] || 0) + 1;
            });

            const container = document.querySelector('.container-fluid');
            if (Object.keys(distribution).length > 0) {
                const distributionHTML = `
                <div class="grade-distribution">
                    <h3 style="grid-column: 1 / -1; text-align: center; margin-bottom: 1rem; color: #1e293b;">Grade Distribution</h3>
                    ${Object.entries(distribution).map(([grade, count]) => `
                        <div class="distribution-item">
                            <div class="distribution-grade">${grade}</div>
                            <div class="distribution-count">${count} grades</div>
                        </div>
                    `).join('')}
                </div>
            `;

                container.insertAdjacentHTML('beforeend', distributionHTML);
            }
        }

        // Initialize grade distribution
        setTimeout(createGradeDistribution, 1500);
    });
</script>