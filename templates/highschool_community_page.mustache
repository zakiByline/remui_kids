{{> theme_remui_kids/highschool_sidebar }}>
<div class="highschool-community-page">
    <!-- Page Header -->
    <div class="community-page-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="fa fa-users me-3"></i>
                        Community
                    </h1>
                </div>
                <div class="col-md-4 text-md-end">
                    <button class="btn btn-outline-light me-2" onclick="refreshCommunity()">
                        <i class="fa fa-refresh me-2"></i>Refresh
                    </button>
                    <button class="btn btn-primary" onclick="showCreatePostModal()">
                        <i class="fa fa-plus me-2"></i>New Post
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Community Statistics -->
    <div class="container-fluid">
        <div class="community-stats-section">
            <div class="row g-3 mb-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon posts"><i class="fa fa-comments"></i></div>
                        <div>
                            <div class="stat-value">{{total_posts}}</div>
                            <div>Total Posts</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon users"><i class="fa fa-users"></i></div>
                        <div>
                            <div class="stat-value">{{total_users}}</div>
                            <div>Active Users</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon today"><i class="fa fa-calendar-day"></i></div>
                        <div>
                            <div class="stat-value">{{today_posts}}</div>
                            <div>Today's Posts</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon engagement"><i class="fa fa-heart"></i></div>
                        <div>
                            <div class="stat-value">High</div>
                            <div>Engagement</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- Posts Feed -->
            <div class="col-lg-12">
                <div class="community-feed">
                    <!-- Current user summary -->
                    <div class="user-summary-card mb-3">
                        <div class="user-summary-left">
                            <div class="user-summary-avatar">{{{current_user.picture}}}</div>
                            <div>
                                <div class="user-summary-name">{{current_user.name}}</div>
                                <div class="user-summary-email">{{current_user.email}}</div>
                            </div>
                        </div>
                        <div class="user-summary-right">
                            <span class="user-summary-tag">{{current_user.cohort}}</span>
                        </div>
                    </div>
                    <!-- Filter Tabs -->
                    <div class="feed-filters">
                        <div class="filter-tabs">
                            <button class="filter-tab active" data-filter="all">
                                <i class="fa fa-globe me-2"></i>All Posts
                            </button>
                            <button class="filter-tab" data-filter="homework">
                                <i class="fa fa-book me-2"></i>Homework Help
                            </button>
                            <button class="filter-tab" data-filter="study">
                                <i class="fa fa-graduation-cap me-2"></i>Study Groups
                            </button>
                            <button class="filter-tab" data-filter="projects">
                                <i class="fa fa-project-diagram me-2"></i>Projects
                            </button>
                            <button class="filter-tab" data-filter="qa">
                                <i class="fa fa-question-circle me-2"></i>Q&A
                            </button>
                        </div>
                    </div>

                    <!-- Posts List -->
                    <div class="posts-container">
                        {{#posts}}
                        <div class="post-card" data-category="{{category}}">
                            <div class="post-header">
                                <div class="post-author">
                                    <div class="author-avatar">
                                        {{{author_picture}}}
                                    </div>
                                    <div class="author-info">
                                        <div class="author-name">{{author_name}}</div>
                                        <div class="post-meta">
                                            <span class="post-time">{{time_ago}}</span>
                                            <span class="post-course">{{course_name}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="post-category">
                                    <span class="category-badge category-{{category}}">{{category}}</span>
                                </div>
                            </div>
                            
                            <div class="post-content">
                                <h3 class="post-title">{{title}}</h3>
                                <div class="post-text">{{{content_preview}}}</div>
                            </div>
                            
                            <div class="post-actions">
                                <button class="action-btn like-btn" data-post-id="{{id}}">
                                    <i class="fa fa-heart"></i>
                                    <span class="like-count">{{likes_count}}</span>
                                </button>
                                <button class="action-btn comment-btn" data-post-id="{{id}}">
                                    <i class="fa fa-comment"></i>
                                    <span class="comment-count">{{comments_count}}</span>
                                </button>
                                <button class="action-btn share-btn" data-post-id="{{id}}">
                                    <i class="fa fa-share"></i>
                                    <span>Share</span>
                                </button>
                                <a href="{{{post_url}}}" class="action-btn read-more-btn">
                                    <i class="fa fa-arrow-right"></i>
                                    <span>Read More</span>
                                </a>
                            </div>
                        </div>
                        {{/posts}}
                        
                        {{^posts}}
                        <div class="no-posts">
                            <div class="no-posts-icon">
                                <i class="fa fa-comments fa-3x"></i>
                            </div>
                            <h3>No posts yet</h3>
                            <p>Be the first to start a conversation in the community!</p>
                            <button class="btn btn-primary" onclick="showCreatePostModal()">
                                <i class="fa fa-plus me-2"></i>Create First Post
                            </button>
                        </div>
                        {{/posts}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Post Modal -->
<div class="modal fade" id="createPostModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa fa-plus me-2"></i>Create New Post
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createPostForm">
                    <div class="mb-3">
                        <label for="postTitle" class="form-label">Post Title</label>
                        <input type="text" class="form-control" id="postTitle" placeholder="What's on your mind?">
                    </div>
                    <div class="mb-3">
                        <label for="postCategory" class="form-label">Category</label>
                        <select class="form-select" id="postCategory">
                            <option value="General">General Discussion</option>
                            <option value="Homework Help">Homework Help</option>
                            <option value="Study Group">Study Group</option>
                            <option value="Projects">Projects</option>
                            <option value="Q&A">Q&A</option>
                            <option value="Announcements">Announcements</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="postContent" class="form-label">Content</label>
                        <textarea class="form-control" id="postContent" rows="6" placeholder="Share your thoughts, ask questions, or start a discussion..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="postCourse" class="form-label">Related Course (Optional)</label>
                        <select class="form-select" id="postCourse">
                            <option value="">Select a course</option>
                            <option value="math">Mathematics</option>
                            <option value="english">English Literature</option>
                            <option value="science">Science</option>
                            <option value="history">History</option>
                            <option value="computer">Computer Science</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitPost()">
                    <i class="fa fa-paper-plane me-2"></i>Post
                </button>
            </div>
        </div>
    </div>
</div>

