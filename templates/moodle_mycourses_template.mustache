            <!-- Page Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="courses-page-header">
                        <div>
                            <h2 class="courses-page-title">
                                <i class="fa fa-book-open"></i>
                                My Courses
                            </h2>
                            <p class="courses-page-subtitle">
                                {{#usercohortname}}
                                    Welcome to your {{usercohortname}} courses
                                {{/usercohortname}}
                                {{^usercohortname}}
                                    Explore your courses and track your learning progress!
                                {{/usercohortname}}
                            </p>
                        </div>
                        <!-- View Toggle Buttons -->
                        <div class="view-toggle-buttons">
                            <button class="view-toggle-btn active" id="cards-view-btn" onclick="switchView('cards')">
                                <i class="fa fa-th-large"></i>
                                <span>Cards View</span>
                            </button>
                            <button class="view-toggle-btn" id="tree-view-btn" onclick="switchView('tree')">
                                <i class="fa fa-sitemap"></i>
                                <span>Tree View</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            {{#has_courses}}
            <!-- Cards View Container -->
            <div class="courses-view-container" id="cards-view-container">
                <div class="courses-grid">
                    {{#courses}}
                <div class="course-card">
                    <!-- Course Image -->
                    <div class="course-image-container">
                        {{#courseimage}}
                        <img src="{{courseimage}}" alt="{{fullname}}" class="course-image">
                        {{/courseimage}}
                        {{^courseimage}}
                        <div class="course-image-placeholder">
                            <i class="fa fa-book"></i>
                        </div>
                        {{/courseimage}}
                        
                        <!-- Category Badge (Top Left) -->
                        <div class="course-category-badge">
                            {{categoryname}}
                        </div>
                        
                        <!-- Three-Dot Menu Icon (Top Right) -->
                        <div class="course-options-icon">
                            <i class="fa fa-ellipsis-v"></i>
                        </div>
                    </div>
                    
                    <!-- Course Content -->
                    <div class="course-content">
                        <!-- Course Title -->
                        <h3 class="course-title">{{fullname}}</h3>
                        
                        <!-- Progress Section -->
                        <div class="progress-section">
                            <div class="progress-header">
                                <span class="progress-label">Your Progress</span>
                                <span class="progress-percentage">{{progress_percentage}}%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: {{progress_percentage}}%"></div>
                            </div>
                        </div>
                        
                        <!-- Course Statistics - 2x2 Grid -->
                        <div class="course-stats-grid">
                            <div class="stat-item">
                                <div class="stat-icon lessons">
                                    <i class="fa fa-book"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number">{{completed_sections}}/{{total_sections}}</div>
                                    <div class="stat-label">Lessons</div>
                                </div>
                            </div>
                            
                            <div class="stat-item">
                                <div class="stat-icon activities">
                                    <i class="fa fa-list-alt"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number">{{completed_activities}}/{{total_activities}}</div>
                                    <div class="stat-label">Activities</div>
                                </div>
                            </div>
                            
                            <div class="stat-item">
                                <div class="stat-icon time">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number">{{estimated_time}}</div>
                                    <div class="stat-label">Minutes</div>
                                </div>
                            </div>
                            
                            <div class="stat-item">
                                <div class="stat-icon points">
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number">{{points_earned}}</div>
                                    <div class="stat-label">Points</div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Course Actions -->
                        <div class="course-actions">
                            {{#completed}}
                            <a href="{{courseurl}}" class="btn-primary">
                                <i class="fa fa-check"></i> Review Course
                            </a>
                            {{/completed}}
                            {{#in_progress}}
                            <a href="{{courseurl}}" class="btn-primary">
                                <i class="fa fa-play"></i> Continue Learning
                            </a>
                            {{/in_progress}}
                            {{#not_started}}
                            <a href="{{courseurl}}" class="btn-primary">
                                <i class="fa fa-play"></i> Start Course
                            </a>
                            {{/not_started}}
                        </div>
                    </div>
                </div>
                {{/courses}}
                </div>
            </div>
            
            <!-- Tree View Container -->
            <div class="courses-view-container" id="tree-view-container" style="display: none;">
                <div class="tree-view-courses">
                    {{#treeview_courses}}
                    <div class="course-tree-item">
                        <div class="course-tree-header" onclick="toggleCourseTree('{{id}}')">
                            <div class="course-title-section">
                                <div class="course-icon">
                                    <i class="fa fa-book"></i>
                                </div>
                                <div>
                                    <h3 class="tree-course-name">{{fullname}}</h3>
                                    <div class="course-meta">
                                        <span><i class="fa fa-list-alt"></i> {{total_sections}} Lessons</span>
                                        <span><i class="fa fa-chart-line"></i> {{progress_percentage}}% Complete</span>
                                    </div>
                                </div>
                            </div>
                            <div class="course-toggle" id="course-toggle-{{id}}">
                                <i class="fa fa-chevron-down"></i>
                            </div>
                        </div>
                        
                        <div class="course-progress-section">
                            <div class="course-progress-label">
                                <span>Course Progress</span>
                                <span class="progress-percent">{{progress_percentage}}%</span>
                            </div>
                            <div class="progress-bar-container">
                                <div class="progress-bar-fill" style="width: {{progress_percentage}}%;"></div>
                            </div>
                        </div>
                        
                        <div class="lessons-container" id="lessons-container-{{id}}">
                            {{#lessons}}
                            <div class="lesson-tree-item">
                                <div class="lesson-header" onclick="toggleLessonTree('{{../id}}-{{id}}')">
                                    <div class="lesson-title-section">
                                        <div class="lesson-icon">
                                            <i class="fa fa-book-open"></i>
                                        </div>
                                        <div>
                                            <h4 class="lesson-title">{{name}}</h4>
                                            <div class="lesson-meta">
                                                <span><i class="fa fa-tasks"></i> {{activity_count}} Activities</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="lesson-toggle" id="lesson-toggle-{{../id}}-{{id}}">
                                        <i class="fa fa-chevron-down"></i>
                                    </div>
                                </div>
                                
                                <div class="lesson-progress">
                                    <div class="lesson-progress-bar-container">
                                        <div class="lesson-progress-bar-fill" style="width: {{progress_percentage}}%;"></div>
                                    </div>
                                    <span class="lesson-progress-text">{{progress_percentage}}%</span>
                                </div>
                                
                                <div class="activities-container" id="activities-container-{{../id}}-{{id}}">
                                    {{#activities}}
                                    <a href="{{url}}" class="activity-tree-item {{#completed}}completed{{/completed}}">
                                        <div class="activity-icon-wrapper">
                                            <i class="fa {{icon}}"></i>
                                        </div>
                                        <div class="activity-content">
                                            <div class="activity-title-row">
                                                <span class="activity-number">{{activity_number}}</span>
                                                <h5 class="activity-title">{{name}}</h5>
                                            </div>
                                            <div class="activity-meta-row">
                                                <span class="activity-type"><i class="fa fa-tag"></i> {{type}}</span>
                                                <span class="activity-duration"><i class="fa fa-clock-o"></i> {{duration}} mins</span>
                                                <span class="activity-points"><i class="fa fa-star"></i> {{points}} pts</span>
                                            </div>
                                        </div>
                                        {{#completed}}
                                        <div class="activity-completed-badge">
                                            <i class="fa fa-check-circle"></i>
                                        </div>
                                        {{/completed}}
                                    </a>
                                    {{/activities}}
                                </div>
                            </div>
                            {{/lessons}}
                        </div>
                    </div>
                    {{/treeview_courses}}
                </div>
            </div>
            {{/has_courses}}
            
            {{^has_courses}}
            <!-- No Courses Message -->
            <div class="no-courses">
                <i class="fa fa-book-open"></i>
                <h3>No Courses Available</h3>
                <p>You are not currently enrolled in any courses.</p>
                <a href="{{dashboardurl}}" class="back-to-dashboard">
                    <i class="fa fa-arrow-left"></i>
                    Back to Dashboard
                </a>
            </div>
            {{/has_courses}}

