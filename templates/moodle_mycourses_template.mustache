<script>
// View Switching Function
function switchView(viewType) {
    const cardsView = document.getElementById('cards-view-container');
    const treeView = document.getElementById('tree-view-container');
    const cardsBtn = document.getElementById('cards-view-btn');
    const treeBtn = document.getElementById('tree-view-btn');
    
    if (viewType === 'cards') {
        cardsView.style.display = 'block';
        treeView.style.display = 'none';
        cardsBtn.classList.add('active');
        treeBtn.classList.remove('active');
        localStorage.setItem('mycourses_view', 'cards');
    } else if (viewType === 'tree') {
        cardsView.style.display = 'none';
        treeView.style.display = 'block';
        cardsBtn.classList.remove('active');
        treeBtn.classList.add('active');
        localStorage.setItem('mycourses_view', 'tree');
    }
}

// Toggle Course Tree (Shows/Hides Lessons)
function toggleCourseTree(courseId) {
    const lessonsContainer = document.getElementById('lessons-container-' + courseId);
    const toggleElement = document.getElementById('course-toggle-' + courseId);
    
    if (lessonsContainer) {
        if (lessonsContainer.classList.contains('show')) {
            lessonsContainer.classList.remove('show');
            toggleElement.classList.remove('expanded');
        } else {
            lessonsContainer.classList.add('show');
            toggleElement.classList.add('expanded');
        }
    }
}

// Toggle Lesson Tree (Shows/Hides Activities)
function toggleLessonTree(lessonId) {
    const activitiesContainer = document.getElementById('activities-container-' + lessonId);
    const toggleElement = document.getElementById('lesson-toggle-' + lessonId);
    
    if (activitiesContainer) {
        if (activitiesContainer.classList.contains('show')) {
            activitiesContainer.classList.remove('show');
            toggleElement.classList.remove('expanded');
        } else {
            activitiesContainer.classList.add('show');
            toggleElement.classList.add('expanded');
        }
    }
}

// Restore saved view preference on page load
document.addEventListener('DOMContentLoaded', function() {
    const savedView = localStorage.getItem('mycourses_view') || 'cards';
    switchView(savedView);
});
</script>

