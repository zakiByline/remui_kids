<script>
(function() {
    const frameworkToggles = document.querySelectorAll('[data-framework-toggle]');
    frameworkToggles.forEach(toggle => {
        toggle.addEventListener('click', () => {
            const card = toggle.closest('.framework-card');
            const body = card.querySelector('.framework-body');
            const expanded = toggle.getAttribute('aria-expanded') === 'true';
            toggle.setAttribute('aria-expanded', expanded ? 'false' : 'true');
            body.classList.toggle('open', !expanded);
            card.classList.toggle('open', !expanded);
        });
    });

    const competencyToggles = document.querySelectorAll('.competency-toggle');
    competencyToggles.forEach(toggle => {
        toggle.addEventListener('click', () => {
            const targetId = toggle.getAttribute('data-target');
            const panel = document.getElementById(targetId);
            if (!panel) {
        return;
    }
            const expanded = toggle.getAttribute('aria-expanded') === 'true';
            toggle.setAttribute('aria-expanded', expanded ? 'false' : 'true');
            panel.classList.toggle('open', !expanded);
        });
    });
})();
</script>

