<div class="remui-maintenance-wrapper">
    <style>
    .remui-maintenance-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 120px);
        padding: 4rem 1.5rem;
        background: linear-gradient(180deg, #f8fbff 0%, #eef4ff 100%);
        text-align: center;
    }
    .remui-maintenance-card {
        background: #ffffff;
        border-radius: 24px;
        padding: clamp(2.5rem, 4vw, 3.5rem);
        max-width: 720px;
        width: 100%;
        box-shadow: 0 24px 60px rgba(79, 114, 205, 0.18);
        border: 1px solid rgba(120, 144, 240, 0.18);
        position: relative;
        overflow: hidden;
    }
    .remui-maintenance-card::before,
    .remui-maintenance-card::after {
        content: '';
        position: absolute;
        width: 220px;
        height: 220px;
        background: radial-gradient(circle at center, rgba(99, 102, 241, 0.12), transparent 70%);
        z-index: 0;
    }
    .remui-maintenance-card::before {
        top: -80px;
        left: -80px;
    }
    .remui-maintenance-card::after {
        bottom: -80px;
        right: -80px;
    }
    .remui-maintenance-icon {
        width: 86px;
        height: 86px;
        border-radius: 50%;
        margin: 0 auto 1.75rem;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.12), rgba(59, 130, 246, 0.18));
        display: grid;
        place-items: center;
        position: relative;
        z-index: 1;
    }
    .remui-maintenance-icon svg {
        width: 52px;
        height: 52px;
        fill: none;
        stroke: #3b82f6;
        stroke-width: 1.8;
    }
    .remui-maintenance-status {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.4rem 1rem;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 999px;
        color: #4338ca;
        background: rgba(67, 56, 202, 0.12);
        margin-bottom: 1.25rem;
        text-transform: uppercase;
        letter-spacing: 0.06em;
    }
    .remui-maintenance-title {
        font-size: clamp(2rem, 4vw, 2.6rem);
        font-weight: 700;
        color: #1f2a44;
        margin: 0 0 1rem;
        letter-spacing: -0.02em;
        z-index: 1;
        position: relative;
    }
    .remui-maintenance-message {
        font-size: 1.05rem;
        color: #4b5563;
        margin: 0 0 2.25rem;
        line-height: 1.6;
        z-index: 1;
        position: relative;
    }
    .remui-maintenance-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        z-index: 1;
        position: relative;
    }
    .remui-maintenance-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.85rem 1.9rem;
        font-size: 0.95rem;
        font-weight: 600;
        border-radius: 12px;
        text-decoration: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: 0 10px 24px rgba(79, 114, 205, 0.22);
    }
    .remui-maintenance-link.primary {
        background: linear-gradient(135deg, #4338ca 0%, #2563eb 100%);
        color: #ffffff;
        border: none;
    }
    .remui-maintenance-link.secondary {
        background: #ffffff;
        color: #1f2a44;
        border: 1px solid rgba(148, 163, 184, 0.55);
        box-shadow: none;
    }
    .remui-maintenance-link.ghost {
        background: rgba(15, 23, 42, 0.04);
        color: #475569;
        border: 1px dashed rgba(148, 163, 184, 0.45);
        box-shadow: none;
    }
    .remui-maintenance-link:hover {
        transform: translateY(-2px);
    }
    .remui-maintenance-link.secondary:hover {
        box-shadow: 0 12px 30px rgba(148, 163, 184, 0.22);
    }
    .remui-maintenance-footer {
        margin-top: 2.25rem;
        font-size: 0.85rem;
        color: rgba(31, 42, 68, 0.7);
        z-index: 1;
        position: relative;
    }
    @media (max-width: 600px) {
        .remui-maintenance-wrapper {
            padding: 3rem 1.25rem;
        }
    }
    </style>

    <div class="remui-maintenance-card">
        <div class="remui-maintenance-icon" aria-hidden="true">
            <svg viewBox="0 0 64 64">
                <g stroke-linecap="round" stroke-linejoin="round">
                    <path d="M32 26a6 6 0 100 12 6 6 0 000-12z"/>
                    <path d="M32 12v4"/>
                    <path d="M32 48v4"/>
                    <path d="M18 18l2.8 2.8"/>
                    <path d="M43.2 43.2L46 46"/>
                    <path d="M12 32h4"/>
                    <path d="M48 32h4"/>
                    <path d="M18 46l2.8-2.8"/>
                    <path d="M43.2 20.8L46 18"/>
                </g>
            </svg>
        </div>
        {{#statuslabel}}
            <span class="remui-maintenance-status">{{.}}</span>
        {{/statuslabel}}
        <h1 class="remui-maintenance-title">{{title}}</h1>
        <div class="remui-maintenance-message">{{{message}}}</div>
        <div class="remui-maintenance-actions">
            {{#homeurl}}
                <a href="{{homeurl}}" class="remui-maintenance-link secondary">{{homebuttonlabel}}</a>
            {{/homeurl}}
            {{#dashurl}}
                <a href="{{dashurl}}" class="remui-maintenance-link secondary">{{dashbuttonlabel}}</a>
            {{/dashurl}}

            {{#reloadlabel}}
                <a href="" class="remui-maintenance-link ghost" onclick="location.reload(); return false;">{{reloadlabel}}</a>
            {{/reloadlabel}}
        </div>
        <div class="remui-maintenance-footer">
            {{#timestamp}}
                {{.}}
            {{/timestamp}}
        </div>
    </div>
</div>


