<script>
// Settings page JavaScript
document.addEventListener('DOMContentLoaded', function() {
    console.log('Elementary Settings page loaded');
    
    // Initialize settings based on user preferences
    initializeSettings();
});

function initializeSettings() {
    // Load saved preferences from localStorage
    const savedPreferences = JSON.parse(localStorage.getItem('elementary_settings') || '{}');
    
    // Apply saved settings
    if (savedPreferences.darkMode) {
        document.body.classList.add('dark-mode');
        const darkToggle = document.querySelector('.settings-toggle');
        if (darkToggle) darkToggle.classList.add('active');
    }
    
    if (savedPreferences.fontSize) {
        document.body.style.fontSize = savedPreferences.fontSize;
        const fontSizeSelect = document.querySelector('select');
        if (fontSizeSelect) fontSizeSelect.value = savedPreferences.fontSize;
    }
}

function toggleNotification(toggle) {
    toggle.classList.toggle('active');
    
    // Save preference
    const preferences = JSON.parse(localStorage.getItem('elementary_settings') || '{}');
    preferences.emailNotifications = toggle.classList.contains('active');
    localStorage.setItem('elementary_settings', JSON.stringify(preferences));
    
    // Show feedback
    showNotification('Notification settings updated!', 'success');
}

function toggleDarkMode(toggle) {
    toggle.classList.toggle('active');
    document.body.classList.toggle('dark-mode');
    
    // Save preference
    const preferences = JSON.parse(localStorage.getItem('elementary_settings') || '{}');
    preferences.darkMode = toggle.classList.contains('active');
    localStorage.setItem('elementary_settings', JSON.stringify(preferences));
    
    // Show feedback
    showNotification('Theme updated!', 'success');
}

function changeFontSize(size) {
    const sizeMap = {
        'small': '14px',
        'medium': '16px',
        'large': '18px'
    };
    
    document.body.style.fontSize = sizeMap[size];
    
    // Save preference
    const preferences = JSON.parse(localStorage.getItem('elementary_settings') || '{}');
    preferences.fontSize = sizeMap[size];
    localStorage.setItem('elementary_settings', JSON.stringify(preferences));
    
    // Show feedback
    showNotification('Font size updated!', 'success');
}

function showNotification(message, type = 'info') {
    // Create notification element
    const notification = document.createElement('div');
    notification.className = `notification notification-${type}`;
    notification.innerHTML = `
        <i class="fa fa-${type === 'success' ? 'check-circle' : 'info-circle'}"></i>
        <span>${message}</span>
    `;
    
    // Style the notification
    notification.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        background: ${type === 'success' ? '#43e97b' : '#667eea'};
        color: white;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        z-index: 10000;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
        animation: slideInRight 0.3s ease-out;
    `;
    
    // Add to page
    document.body.appendChild(notification);
    
    // Remove after 3 seconds
    setTimeout(() => {
        notification.style.animation = 'slideOutRight 0.3s ease-in';
        setTimeout(() => {
            if (notification.parentNode) {
