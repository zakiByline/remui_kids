    cursor: pointer;
    transition: all 0.3s ease;
}

.settings-toggle.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.settings-toggle::after {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
