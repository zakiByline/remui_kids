<!-- Template loaded: {{cache_bust}} -->
<div class="lesson-modules-page mt-5">
    <!-- Lesson Header - Welcome Header for Elementary Students -->
    {{#is_elementary_grade}}
    <div class="welcome-header">
        <!-- Back Button -->
        <div class="back-button-in-header">
            <a href="{{{lessonsurl}}}" class="back-btn">
                <i class="fa fa-arrow-left"></i>
                Back to Lessons
            </a>
        </div>
        
        <!-- Left Side Bubbles -->
        <div class="welcome-bubbles welcome-bubbles-left">
            <div class="welcome-bubble welcome-bubble-1"></div>
            <div class="welcome-bubble welcome-bubble-2"></div>
            <div class="welcome-bubble welcome-bubble-3"></div>
            <div class="welcome-bubble welcome-bubble-4"></div>
        </div>
        
        <!-- Center Content -->
        <div class="welcome-header-content">
            {{#student_picture_url_only}}
            <img src="{{student_picture_url_only}}" alt="{{student_name}}" class="welcome-student-picture">
            {{/student_picture_url_only}}
            <h1 class="welcome-title">
                <i class="fa fa-cube"></i>
                {{lesson_name}}
            </h1>
            <p class="welcome-subtitle">
                {{course_name}} • {{grade_level}}
            </p>
        </div>
        
        <!-- Right Side Bubbles -->
        <div class="welcome-bubbles welcome-bubbles-right">
            <div class="welcome-bubble welcome-bubble-5"></div>
            <div class="welcome-bubble welcome-bubble-6"></div>
            <div class="welcome-bubble welcome-bubble-7"></div>
            <div class="welcome-bubble welcome-bubble-8"></div>
        </div>
    </div>
    {{/is_elementary_grade}}
    {{^is_elementary_grade}}
    <!-- Original Lesson Header for Non-Elementary Students -->
    <div class="lesson-header">
        <!-- Back Button -->
        <div class="back-button-in-header">
            <a href="{{{lessonsurl}}}" class="back-btn">
                <i class="fa fa-arrow-left"></i>
                Back to Lessons
            </a>
        </div>
        
        <div class="lesson-header-content">
            <h1 class="lesson-title">{{lesson_name}}</h1>
            <p class="lesson-subtitle">{{course_name}} • {{grade_level}}</p>
            <p class="lesson-description">{{lesson_summary}}</p>
        </div>
        <div class="lesson-progress-section">
            <div class="progress-header">
                <span class="progress-label">Overall Progress</span>
                <span class="progress-percentage">{{overall_progress}}%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: {{overall_progress}}%"></div>
            </div>
            <div class="progress-stats">
                <div class="progress-stat">
                    <i class="fas fa-cubes"></i>
                    <span>{{total_modules}} Total Modules</span>
                </div>
                <div class="progress-stat">
                    <i class="fas fa-check-circle"></i>
                    <span>{{completed_modules}} Completed</span>
                </div>
            </div>
        </div>
    </div>
    {{/is_elementary_grade}}

    <!-- Modules Section -->
    <div class="modules-section">
        <h2 class="modules-title">
            <i class="fas fa-cubes"></i>
            Lesson Modules
        </h2>
        
        {{#has_modules}}
        <div class="modules-grid">
            {{#modules}}
            <div class="module-card" data-item-type="{{item_type}}" data-activity-type="{{activity_type}}">
                <div class="module-header">
                    <div class="module-icon">
                        {{#is_module}}
                        <i class="fas fa-cube"></i>
                        {{/is_module}}
                        {{^is_module}}
                        <i class="fas fa-tasks"></i>
                        {{/is_module}}
                    </div>
                    <div class="module-info">
                        <h4>{{name}}</h4>
                        <span class="module-type">
                            {{#is_module}}Module{{/is_module}}
                            {{^is_module}}{{activity_type}}{{/is_module}}
                        </span>
                    </div>
                </div>
                
                <p class="module-description">{{summary}}</p>
                
                <div class="module-meta">
                    {{#is_module}}
                    <div class="module-meta-item">
                        <i class="fas fa-tasks"></i>
                        <span>{{total_activities}} {{#total_activities}}{{#1}}activity{{/1}}{{^1}}activities{{/1}}{{/total_activities}}{{^total_activities}}activities{{/total_activities}}</span>
                    </div>
                    {{/is_module}}
                    {{^is_module}}
                    <div class="module-meta-item">
                        <i class="fas fa-tag"></i>
                        <span>{{activity_type}}</span>
                    </div>
                    {{/is_module}}
                    <div class="module-meta-item">
                        <i class="fas fa-percentage"></i>
                        <span>{{progress_percentage}}% complete</span>
                    </div>
                </div>
                
                
                <div class="module-status">
                    {{#progress_percentage}}
                    <div class="status-badge {{#100}}completed{{/100}}{{^100}}in-progress{{/100}}">
                        {{#100}}<i class="fas fa-check"></i> Completed{{/100}}
                        {{^100}}<i class="fas fa-clock"></i> In Progress{{/100}}
                    </div>
                    {{/progress_percentage}}
                    {{#url}}
                    <a href="{{url}}" class="module-btn {{#progress_percentage}}{{#100}}completed{{/100}}{{^100}}primary{{/100}}{{/progress_percentage}}{{^progress_percentage}}primary{{/progress_percentage}}">
                        {{#progress_percentage}}
                        {{#100}}<i class="fas fa-redo"></i> Review{{/100}}
                        {{^100}}<i class="fas fa-play"></i> Continue{{/100}}
                        {{/progress_percentage}}
                        {{^progress_percentage}}<i class="fas fa-play"></i> Start{{/progress_percentage}}
                    </a>
                    {{/url}}
                    {{^url}}
                    <span class="module-btn disabled" style="cursor: not-allowed; opacity: 0.6;">
                        <i class="fas fa-lock"></i> Not Available
                    </span>
                    {{/url}}
                </div>
            </div>
            {{/modules}}
        </div>
        {{/has_modules}}
        
        {{^has_modules}}
        <div class="no-modules">
            <div class="no-modules-icon">
                <i class="fas fa-cubes"></i>
            </div>
            <h3>No Modules Available</h3>
            <p>This lesson doesn't have any modules yet. Check back later or contact your teacher.</p>
            <div class="no-modules-actions">
                <a href="{{{lessonsurl}}}" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i>
                    Back to Lessons
                </a>
                <a href="{{{dashboardurl}}}" class="btn btn-secondary">
                    <i class="fas fa-home"></i>
                    Go to Dashboard
                </a>
            </div>
        </div>
        {{/has_modules}}
    </div>
</div>

