            const videosListContainer = document.querySelector('.help-videos-list');
            const videoPlayerContainer = document.querySelector('.help-video-player');
            const videoPlayer = document.getElementById('helpVideoPlayer');
            
            if (videoPlayer) {
                videoPlayer.pause();
                videoPlayer.currentTime = 0;
            }
            
            if (videoPlayerContainer) {
                videoPlayerContainer.style.display = 'none';
            }
            
            if (videosListContainer) {
                videosListContainer.style.display = 'block';
            }
        });
    }
    
    // Load help videos function
    function loadHelpVideos() {
        const videosListContainer = document.querySelector('.help-videos-list');
        const videoPlayerContainer = document.querySelector('.help-video-player');
        
        if (!videosListContainer) return;
        
        // Show loading
        videosListContainer.innerHTML = '<p style="text-align: center; padding: 20px; color: #666;"><i class="fa fa-spinner fa-spin" style="font-size: 24px;"></i><br>Loading help videos...</p>';
        
        // Fetch videos from plugin endpoint
        fetch(M.cfg.wwwroot + '/local/support/get_videos.php?category=courses')
            .then(response => response.json())
            .then(data => {
                // Debug logging
                console.log('Support Videos Response:', data);
                if (data.debug) {
                    console.warn('No videos found. Debug info:', data.debug);
                }
                
                if (data.success && data.videos && data.videos.length > 0) {
                    let html = '';
                    data.videos.forEach(function(video) {
                        html += '<div class="help-video-item" data-video-id="' + video.id + '" data-video-url="' + video.video_url + '">';
                        html += '  <h4><i class="fa fa-play-circle"></i> ' + video.title + '</h4>';
                        if (video.description) {
                            html += '  <p>' + video.description + '</p>';
                        }
                        if (video.duration) {
                            html += '  <small style="color: #999;"><i class="fa fa-clock-o"></i> ' + video.duration + '</small>';
                        }
                        html += '</div>';
                    });
                    videosListContainer.innerHTML = html;
                    
                    // Add click handlers to video items
                    document.querySelectorAll('.help-video-item').forEach(function(item) {
                        item.addEventListener('click', function() {
                            const videoUrl = this.getAttribute('data-video-url');
                            const videoId = this.getAttribute('data-video-id');
                            if (videoUrl && videoPlayerContainer) {
                                const videoPlayer = document.getElementById('helpVideoPlayer');
                                if (videoPlayer) {
                                    videoPlayer.querySelector('source').src = videoUrl;
                                    videoPlayer.load();
                                    videoPlayerContainer.style.display = 'block';
                                    videosListContainer.style.display = 'none';
                                    
                                    // Record view using plugin endpoint
                                    fetch(M.cfg.wwwroot + '/local/support/record_view.php?videoid=' + videoId + '&sesskey=' + M.cfg.sesskey, {method: 'POST'});
                                }
                            }
                        });
                    });
                } else {
                    videosListContainer.innerHTML = '<p style="text-align: center; padding: 20px; color: #666;">No help videos available for this page.</p>';
                }
            })
            .catch(error => {
                console.error('Error loading help videos:', error);
                videosListContainer.innerHTML = '<p style="text-align: center; padding: 20px; color: #d9534f;">Error loading videos. Please try again.</p>';
            });
    }
});

