<script>
// Course search and filter functionality
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('courseSearch');
    const filterDropdown = document.getElementById('courseFilter');
    const searchClearBtn = document.getElementById('searchClearBtn');
    const coursesGrid = document.getElementById('coursesGrid');
    const courseCount = document.getElementById('courseCount');
    
    // Show/hide clear button based on search input
    if (searchInput && searchClearBtn) {
        searchInput.addEventListener('input', function() {
            searchClearBtn.style.display = this.value.trim() ? 'flex' : 'none';
        });
        
        searchClearBtn.addEventListener('click', function() {
            searchInput.value = '';
            searchClearBtn.style.display = 'none';
            
            // Redirect to URL without search parameter
            const selectedCourse = filterDropdown ? filterDropdown.value : 'all';
            const url = new URL(window.location.href);
            
            // Reset to page 1
            url.searchParams.set('page', '1');
            url.searchParams.delete('search');
            
            if (selectedCourse !== 'all') {
                url.searchParams.set('filter_course', selectedCourse);
            } else {
                url.searchParams.delete('filter_course');
            }
            
            // Reload page
            window.location.href = url.toString();
        });
    }
    
    // Filter courses function
    function filterCourses() {
        const searchTerm = searchInput ? searchInput.value.toLowerCase().trim() : '';
        const selectedCourse = filterDropdown ? filterDropdown.value : 'all';
        const treeContainer = document.getElementById('tree-view-container');
        const cardsContainer = document.getElementById('cards-view-container');
        const isCardsView = !cardsContainer || cardsContainer.style.display !== 'none';
        const isTreeView = treeContainer && treeContainer.style.display !== 'none';
        
        let visibleCount = 0;
        
        // Filter cards view
        if (coursesGrid && isCardsView) {
            const courseCards = coursesGrid.querySelectorAll('.course-card');
            courseCards.forEach(function(card) {
                const courseName = (card.getAttribute('data-course-name') || '').toLowerCase();
                const courseShortname = (card.getAttribute('data-course-shortname') || '').toLowerCase();
                const courseCategory = (card.getAttribute('data-course-category') || '').toLowerCase();
                const courseId = card.getAttribute('data-course-id');
                
                // Search filter
                const matchesSearch = !searchTerm || 
                    courseName.includes(searchTerm) ||
                    courseShortname.includes(searchTerm) ||
                    courseCategory.includes(searchTerm);
                
                // Course filter
                const matchesFilter = selectedCourse === 'all' || courseId === selectedCourse;
                
                if (matchesSearch && matchesFilter) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
        }
        
        // Filter tree view
        if (treeContainer && isTreeView) {
            const courseTreeItems = treeContainer.querySelectorAll('.course-tree-item');
            courseTreeItems.forEach(function(item) {
                const courseName = (item.getAttribute('data-course-name') || '').toLowerCase();
                const courseShortname = (item.getAttribute('data-course-shortname') || '').toLowerCase();
                const courseCategory = (item.getAttribute('data-course-category') || '').toLowerCase();
                const courseId = item.getAttribute('data-course-id');
                
                // Search filter
                const matchesSearch = !searchTerm || 
                    courseName.includes(searchTerm) ||
                    courseShortname.includes(searchTerm) ||
                    courseCategory.includes(searchTerm);
                
                // Course filter
                const matchesFilter = selectedCourse === 'all' || courseId === selectedCourse;
                
                if (matchesSearch && matchesFilter) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
        }
        
        // Update count
        if (courseCount) {
            courseCount.textContent = visibleCount;
        }
        
        // Show/hide no results message
        const noResults = document.getElementById('noResultsMessage');
        if (visibleCount === 0) {
            if (!noResults) {
                const activeContainer = document.getElementById('cards-view-container');
                const container = activeContainer || treeContainer;
                if (container) {
                    const message = document.createElement('div');
                    message.id = 'noResultsMessage';
                    message.className = 'no-results-message';
                    message.style.cssText = 'text-align: center; padding: 3rem; color: #6c757d; font-size: 1.1rem;';
                    message.innerHTML = '<p><i class="fa fa-search" style="font-size: 2rem; margin-bottom: 1rem; color: #667eea;"></i><br>No courses found matching your criteria.</p>';
                    container.parentNode.insertBefore(message, container.nextSibling);
                }
            }
        } else if (noResults) {
            noResults.remove();
        }
    }
    
    // Debounce function for search
    let searchTimeout;
    function debounceSearch(func, delay) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(func, delay);
    }
    
    // Attach event listeners
    if (searchInput) {
        // Real-time filtering for display (client-side)
        searchInput.addEventListener('input', function() {
            filterCourses();
            updateURL();
        });
        
        // Reload page on Enter key to trigger server-side filtering
        searchInput.addEventListener('keyup', function(e) {
            if (e.key === 'Enter') {
                const searchTerm = searchInput.value.trim();
                const selectedCourse = filterDropdown ? filterDropdown.value : 'all';
                const url = new URL(window.location.href);
                
                // Reset to page 1 when search changes
                url.searchParams.set('page', '1');
                
                if (searchTerm) {
                    url.searchParams.set('search', searchTerm);
                } else {
                    url.searchParams.delete('search');
                }
                
                if (selectedCourse !== 'all') {
                    url.searchParams.set('filter_course', selectedCourse);
                } else {
                    url.searchParams.delete('filter_course');
                }
                
                // Reload page with search parameters
                window.location.href = url.toString();
            }
        });
    }
    
    if (filterDropdown) {
        filterDropdown.addEventListener('change', function() {
            // Redirect to filtered URL to trigger server-side filtering and pagination
            const searchTerm = searchInput ? searchInput.value.trim() : '';
            const selectedCourse = filterDropdown ? filterDropdown.value : 'all';
            const url = new URL(window.location.href);
            
            // Reset to page 1 when filter changes
            url.searchParams.set('page', '1');
            
            if (searchTerm) {
                url.searchParams.set('search', searchTerm);
            } else {
                url.searchParams.delete('search');
            }
            
            if (selectedCourse !== 'all') {
                url.searchParams.set('filter_course', selectedCourse);
            } else {
                url.searchParams.delete('filter_course');
            }
            
            // Reload page with new filter parameters
            window.location.href = url.toString();
        });
    }
    
    // Update URL with search and filter parameters (for search input - debounced)
    function updateURL() {
        const searchTerm = searchInput ? searchInput.value.trim() : '';
        const selectedCourse = filterDropdown ? filterDropdown.value : 'all';
        const url = new URL(window.location.href);
        
        if (searchTerm) {
            url.searchParams.set('search', searchTerm);
        } else {
            url.searchParams.delete('search');
        }
        
        if (selectedCourse !== 'all') {
            url.searchParams.set('filter_course', selectedCourse);
        } else {
            url.searchParams.delete('filter_course');
        }
        
        // Reset to page 1 when search changes
        url.searchParams.set('page', '1');
        
        // Update URL without reloading (for search - we'll reload on Enter or after debounce)
        window.history.pushState({}, '', url);
    }
    
    // Initial filter on page load
    filterCourses();
});

