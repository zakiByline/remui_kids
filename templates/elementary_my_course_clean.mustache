{{!
    Elementary My Courses Page Template for remui_kids theme
    Specifically designed for Grade 1-3 students
}}

{{#custom_elementary_courses}}

{{> theme_remui_kids/dashboard/elementary_sidebar}}

<div class="elementary-my-courses-page">
    <div class="elementary-my-courses-content">
        <div class="container-fluid">
            <!-- Welcome Header with Bubble Animations -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="welcome-header">
                        <!-- Left Side Bubbles -->
                        <div class="welcome-bubbles welcome-bubbles-left">
                            <div class="welcome-bubble welcome-bubble-1"></div>
                            <div class="welcome-bubble welcome-bubble-2"></div>
                            <div class="welcome-bubble welcome-bubble-3"></div>
                            <div class="welcome-bubble welcome-bubble-4"></div>
                        </div>
                        
                        <!-- Center Content -->
                        <div class="welcome-header-content">
                            {{#student_picture_url_only}}
                            <img src="{{student_picture_url_only}}" alt="{{student_name}}" class="welcome-student-picture">
                            {{/student_picture_url_only}}
                            <h1 class="welcome-title">
                                <i class="fa fa-book-open"></i>
                                My Courses
                            </h1>
                            <p class="welcome-subtitle">
                                Explore your courses and track your learning progress!
                            </p>
                        </div>
                        
                        <!-- Right Side - View Toggle Buttons & Support -->
                        <div class="welcome-header-right">
                            <!-- Support/Help Button - Only show if videos exist -->
                            {{#show_help_button}}
                            <button class="header-help-button" id="helpButton" style="margin-right: 15px;">
                                <i class="fa fa-question-circle"></i>
                                <span>Need Help?</span>
                                <span class="help-badge-count" id="helpBadgeCount">{{help_videos_count}}</span>
                            </button>
                            {{/show_help_button}}
                            
                            <div class="view-toggle-buttons">
                                <button class="view-toggle-btn active" id="cards-view-btn" onclick="switchView('cards')">
                                    <i class="fa fa-th-large"></i>
                                    <span>Cards View</span>
                                </button>
                                <button class="view-toggle-btn" id="tree-view-btn" onclick="switchView('tree')">
                                    <i class="fa fa-sitemap"></i>
                                    <span>Tree View</span>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Right Side Bubbles -->
                        <div class="welcome-bubbles welcome-bubbles-right">
                            <div class="welcome-bubble welcome-bubble-5"></div>
                            <div class="welcome-bubble welcome-bubble-6"></div>
                            <div class="welcome-bubble welcome-bubble-7"></div>
                            <div class="welcome-bubble welcome-bubble-8"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courses Statistics -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="courses-stats-container">
                        <div class="course-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-book stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">{{total_courses}}</div>
                                <div class="stat-label">Total Courses</div>
                            </div>
                        </div>
                        
                        <div class="course-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-clock-o stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">{{in_progress_courses}}</div>
                                <div class="stat-label">In Progress</div>
                            </div>
                        </div>
                        
                        <div class="course-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-check-circle stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">{{completed_courses}}</div>
                                <div class="stat-label">Completed</div>
                            </div>
                        </div>
                        
                        <div class="course-stat-card">
                            <div class="stat-icon-container">
                                <i class="fa fa-chart-line stat-icon"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number">{{overall_progress}}%</div>
                                <div class="stat-label">Overall Progress</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search and Filter Section -->
            {{#has_courses}}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="search-filter-container">
                        <!-- Search Bar -->
                        <div class="search-group">
                            <div class="search-input-wrapper">
                                <i class="fa fa-search search-icon"></i>
                                <input type="text" id="courseSearch" class="search-input" placeholder="Search courses..." value="{{search_query}}">
                                <button class="search-clear-btn" id="searchClearBtn" style="display: none;">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Course Filter Dropdown -->
                        {{#has_filter_courses}}
                        <div class="filter-group">
                            <label class="filter-label" for="courseFilter">
                                <i class="fa fa-filter"></i>
                                <span>Filter by Course:</span>
                            </label>
                            <div class="filter-dropdown-wrapper">
                                <select id="courseFilter" class="course-filter-dropdown">
                                    <option value="all" {{#filter_course_all}}selected{{/filter_course_all}}>All Courses</option>
                                    {{#filter_courses}}
                                    <option value="{{id}}" {{#filter_course_selected}}selected{{/filter_course_selected}}>{{fullname}}</option>
                                    {{/filter_courses}}
                                </select>
                            </div>
                        </div>
                        {{/has_filter_courses}}
                        
                        <!-- Results Count -->
                        <div class="results-count">
                            <span id="courseCount">{{total_courses}}</span> course(s) found
                        </div>
                    </div>
                </div>
            </div>
            {{/has_courses}}

            <!-- Cards View Container -->
            {{#has_courses}}
            <div class="courses-view-container" id="cards-view-container">
                <div class="courses-grid" id="coursesGrid">
                    {{#courses}}
                    <div class="course-card" data-course-id="{{id}}" data-course-name="{{fullname}}" data-course-shortname="{{shortname}}" data-course-category="{{categoryname}}">
                        <div class="course-media {{^courseimage}}course-media--noimage{{/courseimage}}" {{#courseimage}}style="background-image: url('{{courseimage}}');"{{/courseimage}}>
                            <div class="course-media-overlay">
                                <div class="course-media-pill">
                                    {{#book_type}}{{book_type}}{{/book_type}}
                                    {{^book_type}}{{categoryname}}{{/book_type}}
                                </div>
                            </div>
                        </div>

                        <div class="course-content">
                            <div class="course-info-header">
                                <div class="course-info-main">
                                    <span class="course-pill">
                                        {{#book_type}}{{book_type}}{{/book_type}}
                                        {{^book_type}}{{categoryname}}{{/book_type}}
                                    </span>
                                    <h4>{{fullname}}</h4>
                                    <div class="course-status-text">
                                        <i class="fa fa-chart-line"></i>
                                        {{#completed}}Completed{{/completed}}
                                        {{#in_progress}}In progress{{/in_progress}}
                                        {{#not_started}}Starting soon{{/not_started}}
                                    </div>
                                </div>
                                <div class="course-status-icon {{#completed}}completed{{/completed}}{{#in_progress}}in-progress{{/in_progress}}{{#not_started}}not-started{{/not_started}}">
                                    {{#completed}}<i class="fa fa-award"></i>{{/completed}}
                                    {{#in_progress}}<i class="fa fa-play-circle"></i>{{/in_progress}}
                                    {{#not_started}}<i class="fa fa-rocket"></i>{{/not_started}}
                                </div>
                            </div>

                            <div class="course-progress-wrap">
                                <div class="course-progress-header">
                                    <span>Your Progress</span>
                                    <strong>{{progress_percentage}}%</strong>
                                </div>
                                <div class="course-progress-bar">
                                    <div class="course-progress-fill" style="width: {{progress_percentage}}%;"></div>
                                </div>
                            </div>

                            <div class="course-details-grid">
                                <div class="course-stat">
                                    <p class="stat-label">Lessons Done</p>
                                    <p class="stat-value">{{completed_sections}} / {{total_sections}}</p>
                                </div>
                                <div class="course-stat">
                                    <p class="stat-label">Activities Done</p>
                                    <p class="stat-value">{{completed_activities}} / {{total_activities}}</p>
                                </div>
                                <div class="course-stat">
                                    <p class="stat-label">Status</p>
                                    {{#completed}}<p class="stat-pill completed">Completed</p>{{/completed}}
                                    {{#in_progress}}<p class="stat-pill in-progress">In progress</p>{{/in_progress}}
                                    {{#not_started}}<p class="stat-pill not-started">Not started</p>{{/not_started}}
                                </div>
                            </div>

                            <div class="course-actions">
                                {{#completed}}
                                <a href="{{courseurl}}" class="course-primary-btn completed-btn">
                                    <i class="fa fa-sync"></i> Review Course
                                </a>
                                {{/completed}}
                                {{#in_progress}}
                                <a href="{{courseurl}}" class="course-primary-btn in-progress-btn">
                                    <i class="fa fa-play"></i> Continue Learning
                                </a>
                                {{/in_progress}}
                                {{#not_started}}
                                <a href="{{courseurl}}" class="course-primary-btn not-started-btn">
                                    <i class="fa fa-paper-plane"></i> Start Learning
                                </a>
                                {{/not_started}}
                                <button class="course-secondary-btn" onclick="window.location.href='{{courseurl}}';">
                                    <i class="fa fa-info-circle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    {{/courses}}
                </div>
            </div>
            
            <!-- Tree View Container -->
            <div class="courses-view-container" id="tree-view-container" style="display: none;">
                {{#courses}}
                <div class="course-tree-item" data-course-id="{{id}}" data-course-name="{{fullname}}" data-course-shortname="{{shortname}}" data-course-category="{{categoryname}}">
                    <div class="course-header" onclick="toggleCourse({{id}})">
                        <div class="course-title-section">
                            <div class="course-icon">
                                <i class="fa fa-graduation-cap"></i>
                            </div>
                            <div>
                                <h3 class="course-title">{{fullname}}</h3>
                                <div class="course-meta">
                                    <span><i class="fa fa-bookmark"></i> {{total_sections}} Lessons</span>
                                    <span><i class="fa fa-star"></i> {{grade_level}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="course-toggle" id="course-toggle-{{id}}">
                            <i class="fa fa-chevron-down"></i>
                        </div>
                    </div>

                    <!-- Course Progress -->
                    <div class="course-progress-section">
                        <div class="course-progress-label">
                            <span>Course Progress</span>
                            <span><strong>{{progress_percentage}}%</strong></span>
                        </div>
                        <div class="progress-bar-container">
                            <div class="progress-bar-fill" style="width: {{progress_percentage}}%;"></div>
                        </div>
                    </div>

                    <!-- Lessons Container -->
                    {{#has_lessons}}
                    <div class="lessons-container" id="lessons-{{id}}">
                        {{#lessons}}
                        <div class="lesson-tree-item" data-lesson-id="{{id}}">
                            <div class="lesson-header" onclick="toggleLesson(this)">
                                <div class="lesson-title-section">
                                    <div class="lesson-icon">
                                        <i class="fa fa-book-open"></i>
                                    </div>
                                    <div>
                                        <h4 class="lesson-title">{{name}}</h4>
                                        <div class="lesson-meta">
                                            <span><i class="fa fa-puzzle-piece"></i> {{activity_count}} Activities</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="lesson-toggle">
                                    <i class="fa fa-chevron-down"></i>
                                </div>
                            </div>

                            <!-- Lesson Progress -->
                            <div class="lesson-progress">
                                <div class="lesson-progress-bar-container">
                                    <div class="lesson-progress-bar-fill" style="width: {{progress_percentage}}%;"></div>
                                </div>
                                <span class="lesson-progress-text">{{progress_percentage}}%</span>
                            </div>

                            <!-- Subsections and Activities Container -->
                            <div class="activities-container">
                                <!-- Subsections (if any) -->
                                {{#has_subsections}}
                                    {{#subsections}}
                                    <div class="subsection-tree-item" data-subsection-id="{{id}}">
                                        <div class="subsection-header" onclick="toggleSubsection(this)">
                                            <div class="subsection-title-section">
                                                <div class="subsection-icon">
                                                    <i class="fa fa-folder"></i>
                                                </div>
                                                <div>
                                                    <h5 class="subsection-title">{{name}}</h5>
                                                    <div class="subsection-meta">
                                                        <span><i class="fa fa-puzzle-piece"></i> {{activity_count}} Activities</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="subsection-toggle">
                                                <i class="fa fa-chevron-down"></i>
                                            </div>
                                        </div>

                                        <!-- Subsection Progress -->
                                        <div class="subsection-progress">
                                            <div class="subsection-progress-bar-container">
                                                <div class="subsection-progress-bar-fill" style="width: {{progress_percentage}}%;"></div>
                                            </div>
                                            <span class="subsection-progress-text">{{progress_percentage}}%</span>
                                        </div>

                                        <!-- Activities inside Subsection -->
                                        {{#has_activities}}
                                        <div class="subsection-activities-container">
                                            {{#activities}}
                                            <div class="activity-tree-item {{#completed}}completed{{/completed}}" onclick="window.location.href='{{url}}'">
                                                <div class="activity-icon-wrapper">
                                                    <i class="fa {{icon}}"></i>
                                                </div>
                                                <div class="activity-content">
                                                    <div class="activity-title-row">
                                                        <span class="activity-number">#{{activity_number}}</span>
                                                        <h5 class="activity-title">{{name}}</h5>
                                                    </div>
                                                    <div class="activity-meta-row">
                                                        <span class="activity-type">
                                                            <i class="fa fa-tag"></i> {{type}}
                                                        </span>
                                                        <span class="activity-duration">
                                                            <i class="fa fa-clock"></i> {{duration}}
                                                        </span>
                                                        <span class="activity-points">
                                                            <i class="fa fa-star"></i> {{points}} pts
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="activity-status">
                                                    {{#completed}}
                                                    <span class="completed-badge">
                                                        <i class="fa fa-check-circle"></i> Completed!
                                                    </span>
                                                    {{/completed}}
                                                    {{^completed}}
                                                    <a href="{{url}}" class="start-btn" onclick="event.stopPropagation()">
                                                        <i class="fa fa-play"></i> Start
                                                    </a>
                                                    {{/completed}}
                                                </div>
                                            </div>
                                            {{/activities}}
                                        </div>
                                        {{/has_activities}}
                                    </div>
                                    {{/subsections}}
                                {{/has_subsections}}

                                <!-- Direct Activities (not inside subsections) -->
                                {{#has_direct_activities}}
                                    {{#direct_activities}}
                                    <div class="activity-tree-item {{#completed}}completed{{/completed}}" onclick="window.location.href='{{url}}'">
                                        <div class="activity-icon-wrapper">
                                            <i class="fa {{icon}}"></i>
                                        </div>
                                        <div class="activity-content">
                                            <div class="activity-title-row">
                                                <span class="activity-number">#{{activity_number}}</span>
                                                <h5 class="activity-title">{{name}}</h5>
                                            </div>
                                            <div class="activity-meta-row">
                                                <span class="activity-type">
                                                    <i class="fa fa-tag"></i> {{type}}
                                                </span>
                                                <span class="activity-duration">
                                                    <i class="fa fa-clock"></i> {{duration}}
                                                </span>
                                                <span class="activity-points">
                                                    <i class="fa fa-star"></i> {{points}} pts
                                                </span>
                                            </div>
                                        </div>
                                        <div class="activity-status">
                                            {{#completed}}
                                            <span class="completed-badge">
                                                <i class="fa fa-check-circle"></i> Completed!
                                            </span>
                                            {{/completed}}
                                            {{^completed}}
                                            <a href="{{url}}" class="start-btn" onclick="event.stopPropagation()">
                                                <i class="fa fa-play"></i> Start
                                            </a>
                                            {{/completed}}
                                        </div>
                                    </div>
                                    {{/direct_activities}}
                                {{/has_direct_activities}}
                            </div>
                        </div>
                        {{/lessons}}
                    </div>
                    {{/has_lessons}}
                </div>
                {{/courses}}
            </div>
            
            <!-- Pagination Controls -->
            {{#show_pagination}}
            <div class="pagination-container">
                <div class="pagination-info">
                    <span>Showing {{pagination.current_page}} of {{pagination.total_pages}} pages</span>
                    <span class="pagination-total">({{pagination.total_items}} courses total)</span>
                </div>
                <div class="pagination-controls">
                    {{#pagination.has_previous}}
                    <a href="{{pagination.previous_url}}" class="pagination-btn pagination-prev">
                        <i class="fa fa-chevron-left"></i> Previous
                    </a>
                    {{/pagination.has_previous}}
                    {{^pagination.has_previous}}
                    <span class="pagination-btn pagination-prev disabled">
                        <i class="fa fa-chevron-left"></i> Previous
                    </span>
                    {{/pagination.has_previous}}
                    
                    <div class="pagination-pages">
                        {{#pagination.page_urls}}
                        {{#is_current}}
                        <span class="pagination-page pagination-page-current">{{page}}</span>
                        {{/is_current}}
                        {{^is_current}}
                        <a href="{{url}}" class="pagination-page">{{page}}</a>
                        {{/is_current}}
                        {{/pagination.page_urls}}
                    </div>
                    
                    {{#pagination.has_next}}
                    <a href="{{pagination.next_url}}" class="pagination-btn pagination-next">
                        Next <i class="fa fa-chevron-right"></i>
                    </a>
                    {{/pagination.has_next}}
                    {{^pagination.has_next}}
                    <span class="pagination-btn pagination-next disabled">
                        Next <i class="fa fa-chevron-right"></i>
                    </span>
                    {{/pagination.has_next}}
                </div>
            </div>
            {{/show_pagination}}
            {{/has_courses}}
            
            {{^has_courses}}
            <div class="no-courses-message">
                <i class="fa fa-book-open"></i>
                <h3>No Courses Available</h3>
                <p>Your courses will appear here once they're assigned by your teacher.</p>
                <a href="{{{dashboardurl}}}" class="btn btn-primary">
                    <i class="fa fa-home"></i> Back to Dashboard
                </a>
            </div>
            {{/has_courses}}
        </div>
    </div>
</div>

<style>
/* Hide page context header and unwanted containers */
.page-header,
.page-header *,
.context-header,
.context-header * {
    display: none !important;
    visibility: hidden !important;
    height: 0 !important;
    overflow: hidden !important;
    margin: 0 !important;
    padding: 0 !important;
}

/* Remove container margins and padding for full width */
.container,
.container-fluid,
div.container,
div.container-fluid {
    margin: 0 !important;
    padding: 0 !important;
    max-width: 100% !important;
    width: 100% !important;
}

/* Remove page container and drawers */
#page,
#page.drawers,
#page.drag-container,
div#page,
div#page.drawers,
div#page.drag-container {
    margin: 0 !important;
    padding: 0 !important;
    background: transparent !important;
    top: 0 !important;
}

:root {
    --remui-primary: #1f3a60;
    --remui-secondary: #3b5998;
    --remui-accent: #10b981;
    --remui-soft: #eef2ff;
    --remui-border: rgba(129, 140, 248, 0.25);
}

.elementary-my-courses-page {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: linear-gradient(180deg, #f5f7ff 0%, #ebf0ff 60%, #dfe6ff 100%);
    position: fixed;
    top: 80px;
    left: 280px;
    right: 0;
    bottom: 0;
    width: calc(100% - 280px);
    height: calc(100vh - 80px);
    overflow-y: auto;
}

.elementary-my-courses-content {
    padding: 30px 30px 40px 30px;
    width: 100%;
    max-width: 100%;
}

.elementary-my-courses-content .container-fluid {
    padding: 0;
    max-width: 100%;
}

/* Welcome Header with Bubble Animations */
.welcome-header {
    background: linear-gradient(135deg, var(--remui-primary), var(--remui-secondary));
    border-radius: 24px;
    padding: 50px 40px;
    margin-bottom: 30px;
    box-shadow: 0 4px 20px rgba(129, 140, 248, 0.15);
    text-align: center;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    min-height: 180px;
    border: none;
    color: white;
}

.welcome-header-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    flex: 1;
    width: 100%;
}

.welcome-header-right {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-left: 20px;
}

.welcome-title {
    color: white;
}

.welcome-subtitle {
    color: rgba(255, 255, 255, 0.85);
}

/* Animated Bubbles */
.welcome-bubbles {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 200px;
    pointer-events: none;
    z-index: 1;
}

.welcome-bubbles-left {
    left: -50px;
}

.welcome-bubbles-right {
    right: -50px;
}

.welcome-bubble {
    position: absolute;
    border-radius: 50%;
    background: rgba(129, 140, 248, 0.15);
    backdrop-filter: blur(10px);
    animation: floatBubble 15s ease-in-out infinite;
}

.welcome-bubble-1 {
    width: 80px;
    height: 80px;
    top: 10%;
    left: 20%;
    animation-delay: 0s;
}

.welcome-bubble-2 {
    width: 60px;
    height: 60px;
    top: 50%;
    left: 10%;
    animation-delay: 1.5s;
}

.welcome-bubble-3 {
    width: 100px;
    height: 100px;
    top: 70%;
    left: 30%;
    animation-delay: 3s;
}

.welcome-bubble-4 {
    width: 50px;
    height: 50px;
    top: 30%;
    left: 50%;
    animation-delay: 0.5s;
}

.welcome-bubble-5 {
    width: 90px;
    height: 90px;
    top: 15%;
    right: 15%;
    animation-delay: 2s;
}

.welcome-bubble-6 {
    width: 70px;
    height: 70px;
    top: 45%;
    right: 25%;
    animation-delay: 0.8s;
}

.welcome-bubble-7 {
    width: 55px;
    height: 55px;
    top: 65%;
    right: 10%;
    animation-delay: 2.5s;
}

.welcome-bubble-8 {
    width: 85px;
    height: 85px;
    top: 25%;
    right: 40%;
    animation-delay: 1.2s;
}

@keyframes floatBubble {
    0%, 100% {
        transform: translateY(0px) translateX(0px) scale(1);
        opacity: 0.6;
    }
    25% {
        transform: translateY(-8px) translateX(4px) scale(1.03);
        opacity: 0.7;
    }
    50% {
        transform: translateY(-4px) translateX(-2px) scale(0.98);
        opacity: 0.65;
    }
    75% {
        transform: translateY(-10px) translateX(6px) scale(1.02);
        opacity: 0.72;
    }
}

/* Student Profile Picture in Welcome Header */
.welcome-student-picture {
