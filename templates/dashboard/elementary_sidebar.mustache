<script>
// Responsive Sidebar Functionality
document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('elementarySidebar');
    const toggleBtn = document.getElementById('sidebarToggle');
    const toggleIcon = toggleBtn ? toggleBtn.querySelector('.toggle-icon') : null;
    const closeBtn = document.getElementById('sidebarClose');
    const collapseBtn = document.getElementById('sidebarCollapse');
    const collapseDefaultLeft = 286;

    // Create overlay
    const overlay = document.createElement('div');
    overlay.className = 'sidebar-overlay';
    document.body.appendChild(overlay);

    function updateCollapseState(isCollapsed) {
        document.body.classList.toggle('sidebar-collapsed', isCollapsed);

        if (collapseBtn) {
            const icon = collapseBtn.querySelector('i');
            collapseBtn.setAttribute('aria-expanded', String(!isCollapsed));
            collapseBtn.setAttribute('aria-label', isCollapsed ? 'Show sidebar navigation' : 'Hide sidebar navigation');
            if (icon) {
                icon.className = isCollapsed ? 'fa fa-chevron-right' : 'fa fa-chevron-left';
            }
        }

        if (isCollapsed) {
            sidebar.classList.remove('sidebar-open');
            overlay.classList.remove('active');
        }
        if (isCollapsed) {
            updateToggleButtonState(false);
        }
    }

    // Toggle sidebar
    function toggleSidebar() {
        const isOpen = sidebar.classList.toggle('sidebar-open');
        overlay.classList.toggle('active', isOpen);
        updateToggleButtonState(isOpen);

        if (isOpen) {
            updateCollapseState(false);
        }
    }

    // Close sidebar
    function closeSidebar() {
        sidebar.classList.remove('sidebar-open');
        overlay.classList.remove('active');
        updateToggleButtonState(false);
        updateCollapseState(false);
    }

    function updateToggleButtonState(isOpen) {
        if (!toggleBtn) {
            return;
        }
        toggleBtn.setAttribute('aria-expanded', String(!!isOpen));
        toggleBtn.style.color = isOpen ? '#dc2626' : 'white';
        if (toggleIcon) {
            toggleIcon.textContent = isOpen ? '✕' : '☰';
        }
    }

    function positionCollapseButton() {
        if (!collapseBtn) return;
        if (window.innerWidth <= 1024) {
            collapseBtn.style.left = '16px';
        } else {
            collapseBtn.style.left = document.body.classList.contains('sidebar-collapsed') ? '16px' : `${collapseDefaultLeft}px`;
        }
    }

    // Event listeners
    if (toggleBtn) {
        toggleBtn.addEventListener('click', toggleSidebar);
        toggleBtn.setAttribute('aria-expanded', 'false');
        if (toggleIcon) {
            toggleIcon.textContent = '☰';
        }
    }

    if (collapseBtn) {
        collapseBtn.addEventListener('click', function() {
            const currentlyCollapsed = document.body.classList.contains('sidebar-collapsed');
            updateCollapseState(!currentlyCollapsed);
            positionCollapseButton();
        });
    }

    if (closeBtn) {
        closeBtn.addEventListener('click', closeSidebar);
    }

    if (overlay) {
        overlay.addEventListener('click', closeSidebar);
    }

    // Close sidebar on window resize to desktop
    window.addEventListener('resize', function() {
        if (window.innerWidth > 1024) {
            closeSidebar();
        }
        positionCollapseButton();
    });

    updateCollapseState(false);
    positionCollapseButton();

    // Quick Actions functionality
    const quickActionsToggle = document.getElementById('quick-actions-toggle');
    const quickActionsContainer = document.getElementById('quick-actions-container');

    if (quickActionsToggle && quickActionsContainer) {
        quickActionsToggle.addEventListener('click', function() {
            const isExpanded = quickActionsContainer.style.display !== 'none';

            if (isExpanded) {
                quickActionsContainer.style.display = 'none';
                quickActionsToggle.setAttribute('aria-expanded', 'false');
            } else {
                quickActionsContainer.style.display = 'flex';
                quickActionsToggle.setAttribute('aria-expanded', 'true');
            }
        });

        // Initially hide quick actions
        quickActionsContainer.style.display = 'none';
        quickActionsToggle.setAttribute('aria-expanded', 'false');
    }

    // Quick action navigation
    function navigateToPage(page) {
        switch(page) {
            case 'ebooks':
                window.location.href = '/theme/remui_kids/ebooks.php';
                break;
            case 'ask-teacher':
                window.location.href = '/theme/remui_kids/ask_teacher.php';
                break;
