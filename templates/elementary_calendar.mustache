<script>
(function() {
    // Mark today's date in the calendar grid
    const today = '{{today_iso}}';
    document.querySelectorAll('.ecal-cell').forEach(cell => {
        const dateStr = cell.querySelector('.ecal-date');
        if (dateStr && cell.querySelector('[data-date="' + today + '"]')) {
            dateStr.classList.add('today');
        }
    });
})();
</script>
